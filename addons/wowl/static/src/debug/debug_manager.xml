<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="wowl.DebugManager" owl="1">
        <Dropdown class="o_debug_manager"
          beforeOpen="beforeOpenDropdown"
          t-on-dropdown-item-selected.stop="onDropdownItemSelected"
          menuClass="'o_dropdown_menu_right'">
            <span class="fa fa-bug"/>
            <t t-set-slot="menu">
                <t t-foreach="getElements()" t-as="element" t-key="element_index">
                    <t t-if="!element.hide">
                        <t t-if="element.type == 'item'">
                            <DropdownItem payload="{ callback: element.callback }">
                                <a t-if="element.href" t-att-href="element.href" t-esc="element.description" t-on-click="onClickOnTagA"/>
                                <t t-else="" t-esc="element.description"/>
                            </DropdownItem>
                        </t>
                        <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                    </t>
                </t>
            </t>
        </Dropdown>
    </t>

</templates>
