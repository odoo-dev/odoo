<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

  <header t-name="wowl.StudioNavbar" t-inherit="wowl.EnterpriseNavBar" t-inherit-mode="primary">

      <xpath expr="nav" position="attributes">
        <attribute name="class" add="o_studio_navbar" separator=" "/>
      </xpath>

      <xpath expr="//a[contains(@class, 'o_menu_toggle')]" position="attributes">
        <attribute name="t-on-click.prevent">onMenuToggle</attribute>
      </xpath>

      <xpath expr='nav' position="inside">
        <HomeMenuCustomizer t-if="studio.mode === studio.MODES.HOME_MENU" t-on-dropdown-item-selected.stop=""/>
        <t t-call="wowl.studio.masterButtons" />
      </xpath>

      <xpath expr="//t[@t-call='wowl.NavBar.SectionsMenu']" position="attributes">
        <attribute name="t-call">wowl.studio.NavBar.SectionsMenu</attribute>
      </xpath>

      <xpath expr="//ul[contains(@class, 'o_menu_systray')]" position="replace"/>
  </header>

  <div t-name="wowl.studio.masterButtons" class="o_studio_buttons">
    <div ref="studioNotes" class="o_web_studio_notes">
        <a href="#" t-on-click.prevent="_onNotesClicked">
            Notes
        </a>
    </div>
    <div class="o_web_studio_leave">
        <a class="btn btn-primary" t-on-click="closeStudio">Close</a>
    </div>
  </div>

  <ul t-name="wowl.studio.NavBar.SectionsMenu" t-inherit="wowl.NavBar.SectionsMenu" owl="1">
    <xpath expr="." position="inside">
      <EditMenuItem t-if="studio.mode === studio.MODES.EDITOR" />
    </xpath>
  </ul>

</templates>