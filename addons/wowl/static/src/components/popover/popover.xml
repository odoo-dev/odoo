<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="wowl.Popover" owl="1">
        <div
            t-on-popover-closed="onClose"
            t-on-popover-compute="onCompute"
        >
            <t t-if="!props.target">
                <t t-slot="default" />
            </t>
            <t t-if="isDisplayed">
                <Portal target="'.o_popover_container'">
                    <div role="tooltip" class="o_popover"
                        t-att-class="props.popoverClass"
                        t-ref="popover"
                    >
                        <t t-slot="content" />
                    </div>
                </Portal>
            </t>
        </div>
    </t>

</templates>
