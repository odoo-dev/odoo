<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="wowl.ActionMenus" owl="1">
        <div class="o_cp_action_menus" t-on-item-selected="_onItemSelected">
            <Dropdown t-if="printItems.length" togglerClass="'o_dropdown_toggler_btn btn btn-secondary'">
                <span class="fa fa-print">Print</span>
                <t t-set-slot="menu">
                    <t t-foreach="printItems" t-as="item">
                        <DropdownItem payload="item"><t t-esc="item.name" /></DropdownItem>
                    </t>
                </t>
            </Dropdown>
            <Dropdown t-if="printItems.length" togglerClass="'o_dropdown_toggler_btn btn btn-secondary'">
                <span class="fa fa-print">Action</span>
                <t t-set-slot="menu">
                    <t t-foreach="actionItems" t-as="item">
                        <DropdownItem payload="item"><t t-esc="item.name" /></DropdownItem>
                    </t>
                </t>
            </Dropdown>
        </div>
    </t>

</templates>
