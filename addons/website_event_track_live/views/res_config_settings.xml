<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.event.track.live</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_event.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='events_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div>
                            <label for="website_event_track_youtube_api_key">
                                Youtube API Key
                            </label>
                            <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                        </div>
                        <div class="text-muted">
                            This key is used to retrieve viewers count data from Youtube for appropriate Tracks.
                        </div>
                        <field name="website_event_track_youtube_api_key"/>
                        <div class="oe_link">
                            <a href="https://console.developers.google.com/flows/enableapi?apiid=youtube" target="_blank">
                                <span class="fa fa-arrow-right mr-1"/>
                                <span>Create a Google Project and a Youtube API Key</span>
                            </a>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
