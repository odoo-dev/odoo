<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!--=================-->
    <!-- Base components -->
    <!--=================-->

    <!-- Editor toolbar -->
    <t t-name="web_editor.toolbar">
        <div id="toolbar" class="oe-toolbar">
            <div id="style" class="btn-group dropdown">
                <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Style" aria-expanded="false">
                    <i class="fa fa-paragraph"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" id="paragraph">Normal</a></li>
                    <li><a class="dropdown-item" href="#" id="pre"><pre>Code</pre></a></li>
                    <li><a class="dropdown-item" href="#" id="heading1"><h1>Header 1</h1></a></li>
                    <li><a class="dropdown-item" href="#" id="heading2"><h2>Header 2</h2></a></li>
                    <li><a class="dropdown-item" href="#" id="heading3"><h3>Header 3</h3></a></li>
                    <li><a class="dropdown-item" href="#" id="heading4"><h4>Header 4</h4></a></li>
                    <li><a class="dropdown-item" href="#" id="heading5"><h5>Header 5</h5></a></li>
                    <li><a class="dropdown-item" href="#" id="heading6"><h6>Header 6</h6></a></li>
                    <li><a class="dropdown-item" href="#" id="blockquote"><blockquote>Quote</blockquote></a></li>
                </ul>
            </div>
            <div id="decoration" class="btn-group">
                <div id="bold" title="Toggle bold" class="btn"><i class="fa fa-bold fa-fw"></i></div>
                <div id="italic" title="Toggle italic" class="btn"><i class="fa fa-italic fa-fw"></i></div>
                <div id="underline" title="Toggle underline" class="btn"><i class="fa fa-underline fa-fw"></i></div>
                <div id="removeFormat" title="Remove format" class="btn"><i class="fa fa-eraser fa-fw"></i></div>
            </div>

            <div id="font-size" class="btn-group dropdown">
                <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Font Size" aria-expanded="false">
                    <span id="fontSizeCurrentValue"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" data-font-size="medium">default</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="8px">8</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="9px">9</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="10px">10</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="11px">11</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="12px">12</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="14px">14</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="18px">18</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="24px">24</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="36px">36</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="48px">48</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="62px">62</a></li>
                </ul>
            </div>

            <div id="colorInputButtonGroup" class="btn-group">
                <label id="foreColor" htmlFor="foreColorInput">
                    <input id="foreColorInput" type="color" name="foreColor" />
                    <div class="btn color-button">
                        <i class="fa fa-font color-indicator fore-color"></i>
                    </div>
                </label>
                <label id="hiliteColor" htmlFor="hiliteColorInput">
                    <input id="hiliteColorInput" type="color" name="hiliteColor"/>
                    <div class="btn color-button">
                        <i class="fa fa-paint-brush color-indicator hilite-color"></i>
                    </div>
                </label>
            </div>

            <div id="justify" class="btn-group dropdown">
                <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Paragraph" aria-expanded="false">
                    <i id="paragraphDropdownButton" class="fa fa-align-left fa-fw"></i>
                </button>
                <div class="dropdown-menu">
                    <div class="btn-group">
                        <div id="justifyLeft" class="btn"><i class="fa fa-align-left fa-fw"></i></div>
                        <div id="justifyCenter" class="btn"><i class="fa fa-align-center fa-fw"></i></div>
                        <div id="justifyRight" class="btn"><i class="fa fa-align-right fa-fw"></i></div>
                        <div id="justifyFull" class="btn"><i class="fa fa-align-justify fa-fw"></i></div>
                    </div>
                </div>
            </div>

            <div id="list" class="btn-group dropdown">
                <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="List" aria-expanded="false">
                    <i id="justifyDropdownButton" class="fa fa-list-ul fa-fw"></i>
                </button>
                <div class="dropdown-menu">
                    <div class="btn-group">
                        <div id="unordered" title="Toggle unordered list" class="btn"><i class="fa fa-list-ul fa-fw"></i></div>
                        <div id="ordered" title="Toggle ordered list" class="btn"><i class="fa fa-list-ol fa-fw"></i></div>
                        <div id="checklist" title="Toggle checklist" class="btn"><i class="fa fa-check-square-o fa-fw"></i></div>
                    </div>
                </div>
            </div>

            <div id="table" class="btn-group dropdown">
                <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Table" aria-expanded="false"
                    id="tableDropdownButton">
                    <i class="fa fa-table fa-fw"></i>
                </button>
                <div class="dropdown-menu">
                    <div class="tablepicker"></div>
                    <div class="tablepicker-size">1x1</div>
                </div>
            </div>

            <div id="link" class="btn-group">
                <div id="media-modal" title="Insert or edit media" class="fa fa-file-image-o fa-fw btn editor-ignore"></div>
                <div id="createLink" title="Link" class="fa fa-link fa-fw btn"></div>
                <a id="media-description" href="#" title="Edit media description" class="btn editor-ignore">Description</a>
            </div>
        </div>
    </t>

    <!--=================-->
    <!-- Snippet options -->
    <!--=================-->

    <!-- Background position option overlay -->
    <t t-name="web_editor.background_position_overlay">
        <div class="o_we_background_position_overlay oe_overlay">
            <div class="o_we_overlay_content position-absolute">
                <div class="o_overlay_background"/>
                <div class="o_we_overlay_buttons position-absolute d-flex m-1" style="top: 0">
                    <button class="btn btn-primary mr-1 o_btn_apply">Apply</button>
                    <button class="btn btn-danger o_btn_discard">Discard</button>
                </div>
            </div>
        </div>
    </t>
    <!-- Save Snippet Name option dialog -->
    <t t-name="web_editor.dialog.save_snippet">
        <div>
            <div class="form-group form-row">
                <label class="col-form-label col-md-3" for="snippetName">Name</label>
                <div class="col-md-9">
                    <input type="text"
                           class="form-control o_we_snippet_name_input"
                           id="snippetName"
                           t-att-value="currentSnippetName"/>
                </div>
            </div>
        </div>
    </t>
</templates>
