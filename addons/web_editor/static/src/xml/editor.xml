<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!--=================-->
    <!-- Base components -->
    <!--=================-->

    <!-- Editor toolbar -->
    <t t-name="web_editor.toolbar">
        <div id="toolbar" class="oe-toolbar">
            <div id="style" class="button-group dropdown">
                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Style" aria-expanded="false">
                    <i class="fa fa-magic"></i> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" id="paragraph">Normal</a></li>
                    <li><a class="dropdown-item" href="#" id="pre"><pre>Code</pre></a></li>
                    <li><a class="dropdown-item" href="#" id="heading1"><h1>Header 1</h1></a></li>
                    <li><a class="dropdown-item" href="#" id="heading2"><h2>Header 2</h2></a></li>
                    <li><a class="dropdown-item" href="#" id="heading3"><h3>Header 3</h3></a></li>
                    <li><a class="dropdown-item" href="#" id="heading4"><h4>Header 4</h4></a></li>
                    <li><a class="dropdown-item" href="#" id="heading5"><h5>Header 5</h5></a></li>
                    <li><a class="dropdown-item" href="#" id="heading6"><h6>Header 6</h6></a></li>
                    <li><a class="dropdown-item" href="#" id="blockquote"><blockquote>Quote</blockquote></a></li>
                </ul>
            </div>
            <div id="decoration" class="button-group">
                <div id="bold" title="Toggle bold" class="fa fa-bold fa-fw btn"></div>
                <div id="italic" title="Toggle italic" class="fa fa-italic fa-fw btn active"></div>
                <div id="underline" title="Toggle underline" class="fa fa-underline fa-fw btn"></div>
                <div id="strikeThrough" title="Toggle strikethrough" class="fa fa-strikethrough fa-fw btn"></div>
                <div id="removeFormat" title="Remove format" class="fa fa-eraser fa-fw btn"></div>
            </div>

            <div class="button-group dropdown">
                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Style" aria-expanded="false">
                    <span id="fontSizeCurrentValue"></span>
                    <i class="fa fa-text-height"></i> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" data-font-size="medium">default</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="8px">8</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="9px">9</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="10px">10</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="11px">11</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="12px">12</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="14px">14</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="18px">18</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="24px">24</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="36px">36</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="48px">48</a></li>
                    <li><a class="dropdown-item" href="#" data-font-size="62px">62</a></li>
                </ul>
            </div>

            <div class="button-group" id="colorInputButtonGroup">
                <label id="foreColor" htmlFor="foreColorInput">
                    <input id="foreColorInput" type="color" name="foreColor" />
                    <i class="color-indicator fore-color fa fa-font btn dropdown-toggle"></i>
                </label>
                <label id="hiliteColor" htmlFor="hiliteColorInput">
                    <input id="hiliteColorInput" type="color" name="hiliteColor" />
                    <i class="color-indicator hilite-color fa fa-paint-brush btn dropdown-toggle"></i>
                </label>
            </div>

            <div id="media" class="button-group">
                <div id="fontawesome" title="Insert font Awesome icon" class="fa fa-star fa-fw btn"></div>
            </div>

            <div id="list" class="button-group">
                <div id="unordered" title="Toggle unordered list" class="fa fa-list-ul fa-fw btn"></div>
                <div id="ordered" title="Toggle ordered list" class="fa fa-list-ol fa-fw btn"></div>
                <div id="checklist" title="Toggle checklist" class="fa fa-check-square-o fa-fw btn"></div>
            </div>

            <div id="justify" class="button-group dropdown">
                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Paragraph" aria-expanded="false">
                    <i id="paragraphDropdownButton" class="fa fa-align-left fa-fw"></i> <span class="caret"></span>
                </button>
                <div class="dropdown-menu">
                    <div class="btn-group">
                        <div class="btn" href="#" id="justifyLeft"><i class="fa fa-align-left fa-fw btn"></i></div>
                        <div class="btn" href="#" id="justifyCenter"><i class="fa fa-align-center fa-fw btn"></i></div>
                        <div class="btn" href="#" id="justifyRight"><i class="fa fa-align-right fa-fw btn"></i></div>
                        <div class="btn" href="#" id="justifyFull"><i class="fa fa-align-justify fa-fw btn"></i></div>
                    </div>
                </div>
            </div>

            <div id="table" class="button-group dropdown">
                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                    data-toggle="dropdown" title="" tabindex="-1"
                    data-original-title="Table" aria-expanded="false"
                    id="tableDropdownButton">
                    <i class="fa fa-table fa-fw"></i> <span class="caret"></span>
                </button>
                <div class="dropdown-menu">
                    <div class="tablepicker"></div>
                    <div class="tablepicker-size">1x1</div>
                </div>
            </div>

            <div id="link" class="button-group">
                <div id="createLink" title="Link" class="fa fa-link fa-fw btn"></div>
                <div id="unLink" title="Link" class="fa fa-unlink fa-fw btn"></div>
            </div>
        </div>
    </t>

    <!--=================-->
    <!-- Snippet options -->
    <!--=================-->

    <!-- Background position option overlay -->
    <t t-name="web_editor.background_position_overlay">
        <div class="o_we_background_position_overlay oe_overlay">
            <div class="o_we_overlay_content position-absolute">
                <div class="o_overlay_background"/>
                <div class="o_we_overlay_buttons position-absolute d-flex m-1" style="top: 0">
                    <button class="btn btn-primary mr-1 o_btn_apply">Apply</button>
                    <button class="btn btn-danger o_btn_discard">Discard</button>
                </div>
            </div>
        </div>
    </t>
</templates>
