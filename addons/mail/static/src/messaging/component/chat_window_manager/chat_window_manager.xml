<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.messaging.component.ChatWindowManager" owl="1">
        <div class="o_ChatWindowManager">
            <!-- Note: DOM elements are ordered from left to right -->
            <t t-if="env.entities.ChatWindow.hasHiddenChatWindows">
                <ChatWindowHiddenMenu class="o_ChatWindowManager_hiddenMenu"/>
            </t>
            <t t-foreach="env.entities.ChatWindow.allOrderedVisible" t-as="chatWindow" t-key="chatWindow.localId">
                <ChatWindow
                    chatWindow="chatWindow.localId"
                    hasCloseAsBackButton="env.entities.Device.instance.isMobile"
                    isDocked="!env.entities.Device.instance.isMobile"
                    isExpandable="!env.entities.Device.instance.isMobile and chatWindow !== env.entities.ChatWindow.newMessage"
                    isFullscreen="env.entities.Device.instance.isMobile"
                />
            </t>
        </div>
    </t>

</templates>
