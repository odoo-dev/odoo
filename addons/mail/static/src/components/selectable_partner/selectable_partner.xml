<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.SelectablePartner" owl="1">
        <div class="o_SelectablePartner" t-on-click="_onClick">
            <t t-if="partner">
                <div class="o_SelectablePartner_avatarContainer">
                    <img class="o_SelectablePartner_avatar rounded-circle" t-att-src="partner.avatarUrl" alt="Avatar"/>
                    <t t-if="partner.im_status">
                        <PartnerImStatusIcon
                            class="o_SelectablePartner_partnerImStatusIcon"
                            t-att-class="{
                                'o_Message_partnerImStatusIcon-mobile': env.messaging.device.isMobile,
                            }"
                            partnerLocalId="partner.localId"
                        />
                    </t>
                </div>
                <div class="o_SelectablePartner_avatarNameSeparator"/>
                <span class="o_SelectablePartner_partnerName">
                    <t t-esc="partner.nameOrDisplayName"/>
                </span>
                <div class="o_SelectablePartner_nameSelectionSeparator"/>
                <input class="o_SelectablePartner_selectionStatus" type="checkbox" t-att-checked="invitePartnerList.isPartnerSelected(partner) ? 'checked' : undefined" t-on-input="_onInput" t-ref="selection-status"/>
            </t>
        </div>
    </t>

</templates>
