<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.attachment_viewer" owl="1">
        <div class="o-mail-attachment-viewer flex-column align-items-center d-flex w-100 h-100" tabindex="0">
            <div class="o-mail-attachment-viewer-header d-flex w-100 bg-black-75 text-400">
                <div t-if="isViewable" class="o-mail-attachment-viewer-headerItem d-flex align-items-center ms-4 me-2">
                    <i t-if="state.attachment.isImage" class="fa fa-picture-o" role="img" title="Image"/>
                    <i t-if="state.attachment.isPdf" class="fa fa-file-text" role="img" title="PDF file"/>
                    <i t-if="state.attachment.isText" class="fa fa-file-text" role="img" title="Text file"/>
                    <i t-if="state.attachment.isVideo" class="fa fa-video-camera" role="img" title="Video"/>
                </div>
                <div class="o-mail-attachment-viewer-headerItem o-mail-attachment-viewer-name d-flex align-items-center mx-2">
                    <span class="o-mail-attachment-viewer-nameText text-truncate" t-out="state.attachment.displayName"/>
                </div>
                <div class="flex-grow-1"/>
                <div class="o-mail-attachment-viewer-buttonDownload o-mail-attachment-viewer-headerItem o-mail-attachment-viewer-headerItemButton d-flex align-items-center px-3 cursor-pointer" role="button" title="Download">
                    <a t-att-href="state.attachment.downloadUrl" class="text-reset" download="">
                        <i class="o-mail-attachment-viewer-headerItemButtonIcon fa fa-download fa-fw" role="img"/>
                        <span>Download</span>
                    </a>
                </div>
                <div t-on-click="close" class="o-mail-attachment-viewer-headerItem o-mail-attachment-viewer-headerItemButton o-mail-attachment-viewer-headerItemButtonClose d-flex align-items-center mb-0 px-3 h4 text-reset cursor-pointer" role="button" title="Close (Esc)" aria-label="Close">
                    <i class="fa fa-fw fa-times" role="img"/>
                </div>
            </div>
            <div t-on-click="close" t-on-mousemove="onMousemoveView" class="o-mail-attachment-viewer-main position-absolute top-0 bottom-0 start-0 end-0 align-items-center justify-content-center d-flex" t-att-class="{ 'o_with_img overflow-hidden': state.attachment.isImage }">
                <div t-if="state.attachment.isImage" class="o-mail-attachment-viewer-zoomer position-absolute align-items-center justify-content-center d-flex w-100 h-100" t-ref="zoomer">
                    <div t-if="!state.imageLoaded" class="o-mail-attachment-viewer-loading position-absolute">
                        <i class="fa fa-3x fa-circle-o-notch fa-fw fa-spin text-white" role="img" title="Loading"/>
                    </div>
                    <img t-on-click.stop="" t-on-load="onImageLoaded" t-on-wheel="onWheelImage" t-on-mousedown.stop="onMousedownImage" t-on-mouseup.stop="onMouseupImage" class="o-mail-attachment-viewer-view o-mail-attachment-viewer-viewImage mw-100 mh-100 transition-base" t-att-src="state.attachment.imageUrl" t-att-style="imageStyle" draggable="false" alt="Viewer" t-ref="image"/>
                </div>
                <iframe t-if="state.attachment.isPdf" class="o-mail-attachment-viewer-view o-mail-attachment-viewer-viewIframe o-mail-attachment-viewer-viewPdf w-75 h-100 border-0" t-ref="iframeViewerPdf" t-att-class="{ 'w-100': env.isSmall }" t-att-src="state.attachment.defaultSource"/>
                <iframe t-if="state.attachment.isText" class="o-mail-attachment-viewer-view o-mail-attachment-viewer-viewIframe o-mail-attachment-viewer-isText o_text w-75 h-100 border-0" t-att-src="state.attachment.defaultSource"/>
                <iframe t-if="state.attachment.isUrlYoutube" allow="autoplay; encrypted-media" class="o-mail-attachment-viewer-view o-mail-attachment-viewer-viewIframe o-mail-attachment-viewer-youtube w-75 h-100 border-0" t-att-src="state.attachment.defaultSource" height="315" width="560"/>
                <video t-if="state.attachment.isVideo" class="o-mail-attachment-viewer-view o-mail-attachment-viewer-viewVideo w-75 h-75" t-att-class="{ 'w-100 h-100': env.isSmall }" t-on-click="onClickVideo" controls="controls">
                    <source t-att-data-type="state.attachment.mimetype" t-att-src="state.attachment.defaultSource"/>
                </video>
            </div>
            <div t-if="state.attachment.isImage" class="o-mail-attachment-viewer-toolbar position-absolute bottom-0 d-flex" role="toolbar">
                <div class="o-mail-attachment-viewer-toolbarButton p-3 rounded-0" t-on-click="zoomIn" title="Zoom In (+)" role="button">
                    <i class="fa fa-fw fa-plus" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-toolbarButton p-3 rounded-0" t-att-class="{ 'o_disabled opacity-50': state.scale === 1 }" t-on-click="resetZoom" role="button" title="Reset Zoom (0)">
                    <i class="fa fa-fw fa-search" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-toolbarButton p-3 rounded-0" t-att-class="{ 'o_disabled opacity-50': state.scale === minScale }" t-on-click="zoomOut" title="Zoom Out (-)" role="button">
                    <i class="fa fa-fw fa-minus" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-toolbarButton p-3 rounded-0" t-on-click="rotate" title="Rotate (r)" role="button">
                    <i class="fa fa-fw fa-repeat" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-toolbarButton p-3 rounded-0" t-on-click="onClickPrint" title="Print" role="button">
                    <i class="fa fa-fw fa-print" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-buttonDownload o-mail-attachment-viewer-toolbarButton p-3 rounded-0 cursor-pointer" title="Download" role="button">
                    <a t-att-href="state.attachment.downloadUrl" class="text-reset" download="">
                        <i class="fa fa-download fa-fw" role="img"/>
                    </a>
                </div>
            </div>
            <t t-if="props.attachments.length > 1">
                <div class="o-mail-attachment-viewer-buttonNavigation o-mail-attachment-viewer-buttonNavigationPrevious o-mail-attachment-viewer-buttonNavigationPreviousIcon position-absolute top-0 bottom-0 start-0 align-items-center justify-content-center d-flex my-auto ms-3 rounded-circle" t-on-click="previous" title="Previous (Left-Arrow)" role="button">
                    <span class="fa fa-chevron-left" role="img"/>
                </div>
                <div class="o-mail-attachment-viewer-buttonNavigation o-mail-attachment-viewer-buttonNavigationNext o-mail-attachment-viewer-buttonNavigationNextIcon position-absolute top-0 bottom-0 end-0 align-items-center justify-content-center d-flex my-auto me-3 rounded-circle" t-on-click="next" title="Next (Right-Arrow)" role="button">
                    <span class="fa fa-chevron-right" role="img"/>
                </div>
            </t>
        </div>
    </t>

</templates>
