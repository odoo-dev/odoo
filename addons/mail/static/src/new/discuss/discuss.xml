<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.discuss" owl="1">
    <div class="d-flex h-100 flex-grow-1">
        <Sidebar />
        <div t-if="thread" class="o-mail-discuss-content d-flex flex-column h-100 w-100 bg-view" t-att-class="{'o-mail-with-composer': thread.type !== 'mailbox'}">
            <!-- top bar -->
            <div class="px-3 bg-100 border-bottom d-flex flex-shrink-0" style="height:42px;">
                <ThreadIcon className="'me-2 align-self-center'" thread="thread"/>
                <div class="d-flex flex-grow-1 align-self-center align-items-center h-100 py-2">
                    <AutogrowInput
                        className="'o-mail-discuss-thread-name flex-shrink-1'"
                        disabled="!thread.isRenameable"
                        onValidate.bind="renameThread"
                        value="thread.name"
                    />
                    <t t-if="thread.description">
                        <div class="flex-shrink-0 mx-2 py-2 border-start"/>
                        <div class="flex-shrink-0 px-1 border text-truncate border-light" t-att-title="thread.description">
                            <t t-esc="thread.description"/>
                        </div>
                    </t>
                </div>
                <div class="o-mail-discuss-actions flex-shrink-0 d-flex align-items-center ms-1">
                    <t t-set="isEmpty" t-value="thread.messages.length === 0"/>
                    <t t-if="thread.id === 'inbox'">
                        <button class="btn btn-secondary" t-att-disabled="isEmpty" t-on-click="markAllAsRead">Mark all read</button>
                    </t>
                    <t t-if="thread.id === 'starred'">
                        <button class="btn btn-secondary" t-att-disabled="isEmpty" t-on-click="unstarAll">Unstar all</button>
                    </t>
                    <t t-if="thread.type !== 'mailbox' and !thread.inCall">
                        <button class="btn" title="Start a Call" t-on-click="startCall">
                            <i class="fa fa-lg fa-phone text-700"/>
                        </button>
                    </t>
                </div>
            </div>
            <t t-if="thread.inCall">
                <CallUI thread="thread"/>
            </t>
            <Thread id="thread.id" t-key="thread.id" messageHighlight="messageHighlight"/>
            <t t-if="thread.type !== 'mailbox' or messaging.discuss.messageToReplyTo">
                <Composer t-key="thread.id" threadId="thread.id" autofocus="true" highlightReplyTo="messageHighlight.highlightMessage" onDiscardCallback="() => messaging.cancelReplyTo()"/>
            </t>
        </div>
        <div t-if="!thread" class="o-mail-discuss-no-thread d-flex flex-grow-1 align-items-center justify-content-center w-100 bg-view">
            <h4 class="text-muted"><b><i>No conversation selected.</i></b></h4>
        </div>
    </div>
</t>

</templates>
