<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.chat_window_container" owl="1">
    <t t-if="!messaging.state.discuss.isActive">
        <ChatWindowHiddenMenu t-if="messaging.hiddenChatWindows.length > 0" chatWindows="messaging.hiddenChatWindows" />
        <t t-foreach="messaging.visibleChatWindows" t-as="chatWindow" t-key="chatWindow.threadLocalId">
            <ChatWindow chatWindow="chatWindow" right="CHAT_WINDOW_END_GAP_WIDTH + chatWindow_index * (CHAT_WINDOW_WIDTH + CHAT_WINDOW_INBETWEEN_WIDTH * 2)"/>
        </t>
    </t>
</t>

</templates>
