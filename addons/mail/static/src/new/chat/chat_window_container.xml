<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.chat_window_container" owl="1">
    <div class="o-mail-chat-window-container" t-if="!store.discuss.isActive">
        <ChatWindowHiddenMenu t-if="chatWindowService.hidden.length > 0" chatWindows="chatWindowService.hidden" />
        <t t-foreach="chatWindowService.visible" t-as="chatWindow" t-key="chatWindow.threadLocalId">
            <ChatWindow chatWindow="chatWindow" right="CHAT_WINDOW_END_GAP_WIDTH + chatWindow_index * (CHAT_WINDOW_WIDTH + CHAT_WINDOW_INBETWEEN_WIDTH * 2)"/>
        </t>
    </div>
</t>

</templates>
