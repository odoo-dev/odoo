<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.composer_suggested_recipient" owl="1">
        <div class="o-mail-suggested-recipient" t-att-data-partner-id="props.suggestedRecipient.persona?.id ? props.suggestedRecipient.persona.id : false" t-att-title="titleText">
            <div class="form-check">
                <t t-if="props.suggestedRecipient.persona">
                    <input t-attf-id="{{ props.suggestedRecipient.id }}_checkbox" class="form-check-input" type="checkbox" t-att-checked="props.suggestedRecipient.checked" t-on-change="onChangeCheckbox" t-ref="checkbox" />
                    <label class="form-check-label" t-attf-for="{{ props.suggestedRecipient.id }}_checkbox">
                        <t t-if="props.suggestedRecipient.name" t-esc="props.suggestedRecipient.name"/>
                        <t t-if="props.suggestedRecipient.email">
                            (<t t-esc="props.suggestedRecipient.email"/>)
                        </t>
                    </label>
                </t>
                <t t-else="">
                    <input t-attf-id="{{ props.suggestedRecipient.id }}_checkbox" class="form-check-input" type="checkbox" disabled="true" t-on-click="onClick" t-ref="checkbox" />
                    <label class="form-check-label" t-attf-for="{{ props.suggestedRecipient.id }}_checkbox" t-on-click="onClick">
                        <t t-if="props.suggestedRecipient.name" t-esc="props.suggestedRecipient.name"/>
                        <t t-if="props.suggestedRecipient.email">
                            (<t t-esc="props.suggestedRecipient.email"/>)
                        </t>
                    </label>
                </t>
            </div>
        </div>
    </t>
</templates>
