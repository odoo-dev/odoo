<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.suggested_recipients_list" owl="1">
        <t t-if="props.hasFollowers and props.thread.composer.type !== 'note'">
            <div t-att-class="props.className" t-att-style="props.styleString">
                <SuggestedRecipient
                    t-foreach="suggestedRecipients"
                    t-as="suggestedRecipient"
                    t-key="suggestedRecipient.id"
                    thread="props.thread"
                    suggestedRecipient="suggestedRecipient"
                />
                <t t-if="props.thread.suggestedRecipients.length > 3">
                    <button t-if="!state.showMore" class="o-mail-suggested-recipient-show-more btn btn-sm btn-link" t-on-click="onClickShowMore">
                        Show more
                    </button>
                    <button t-else="" class="o-mail-suggested-recipient-show-less btn btn-sm btn-link" t-on-click="onClickShowLess">
                        Show less
                    </button>
                </t>
            </div>
        </t>
    </t>
</templates>
