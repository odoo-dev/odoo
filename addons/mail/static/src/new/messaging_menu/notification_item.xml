<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="mail.notification_item" owl="1">
    <div class="o-mail-notification-item d-flex cursor-pointer align-items-center" t-att-class="{ 'border-bottom': !props.isLast, 'o-muted': !props.hasMarkAsReadButton }" t-on-click="onClick">
        <div class="position-relative o-mail-background-inherit m-1 flex-shrink-0" style="width:40px;height:40px;">
            <img class="w-100 h-100 rounded-circle" alt="Notification Item Image" t-att-src="props.iconSrc" />
            <t t-slot="icon"/>
        </div>
        <div class="d-flex flex-column flex-grow-1 align-self-start m-2 overflow-auto">
            <div class="d-flex">
                <span class="fw-bold text-600 text-truncate">
                    <t t-esc="props.displayName"/>
                    <span t-if="props.count > 1"> (<t t-esc="props.count"/>)</span>
                </span>
                <span class="flex-grow-1"/>
                <small t-if="props.dateTime" class="text-muted opacity-50 ms-2">
                    <RelativeTime datetime="props.dateTime" />
                </small>

            </div>
            <div class="d-flex">
                <div class="text-truncate">
                    <t t-slot="body-icon"/>
                    <t t-if="props.body" t-esc="props.body"/>
                </div>
                <div class="flex-grow-1"/>
                <i t-if="props.hasMarkAsReadButton" class="fa fa-check d-flex ms-2 text-600 opacity-50 opacity-100-hover" title="Mark As Read" t-ref="markAsRead"/>
            </div>
        </div>
    </div>
</t>

</templates>
