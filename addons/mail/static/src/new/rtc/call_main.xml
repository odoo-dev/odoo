<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="mail.call_main" owl="1">
    <div class="o-mail-call-main d-flex flex-grow-1 flex-column align-items-center justify-content-center position-relative bg-black-50" t-ref="root" t-on-mouseleave="onMouseleave">
        <div
            class="o-mail-call-main-grid d-flex align-items-center overflow-hidden h-100 w-100 flex-wrap justify-content-center"
            t-attf-style="--height:{{state.tileHeight}}px; --width:{{state.tileWidth}}px;"
            t-on-click="onClick"
            t-on-mousemove="onMousemove"
            t-ref="grid"
        >
            <CallParticipantCard t-foreach="visibleCards" t-as="cardData" t-key="cardData.key"
                cardData="cardData"
                className="'o-mail-call-main-gridParticipantCard'"
                minimized="props.minimized"
                thread="props.thread"
            />
        </div>

        <!-- Buttons -->
        <t t-if="hasSidebarButton">
            <i t-if="props.sidebar.active" class="o-mail-call-main-sidebarButton cursor-pointer position-absolute fa fa-arrow-right" title="Hide sidebar" t-on-click="props.sidebar.close"/>
            <i t-else="" class="o-mail-call-main-sidebarButton cursor-pointer position-absolute fa fa-arrow-left" title="Show sidebar" t-on-click="props.sidebar.open"/>
        </t>
        <div t-if="state.overlay or !isControllerFloating" class="o-mail-call-main-controls d-flex justify-content-center w-100 pb-1" t-att-class="{ 'o-isFloating position-absolute bottom-0 pb-3': isControllerFloating }">
            <div class="o-mail-call-main-controlsOverlayContainer" t-on-mousemove="onMousemoveOverlay">
                <CallActionList thread="props.thread" fullscreen="props.fullscreen"/>
            </div>
        </div>
    </div>
</t>

</templates>
