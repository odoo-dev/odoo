<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.SearchMessagesPanel">
        <ActionPanel
            title="env.inChatter ? undefined : title"
            minWidth="200"
            initialWidth="400"
            icon="env.inChatter ? false : 'oi oi-serch'"
        >
            <SearchMessageInputBar thread="props.thread" closeSearch="props.closeSearch" store="store"/>
            <SearchMessageResult 
                thread="props.thread" 
                messageSearch="store.messageSearch"
                messages="store.messageSearch.messages"
                loadMore="store.messageSearch.loadMore"
                onClickJump="props.onClickJump"
            />
        </ActionPanel>
    </t>
</templates>
