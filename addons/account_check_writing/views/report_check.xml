<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_check">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="voucher">
            <div class="page">
                <table width="100%" height="288px;">
                    <tr>
                        <td style="vertical-align:top;">
                            <div class="row col-xs-12" style="margin-top:96px;">
                                <div class="text-left col-xs-1 col-xs-offset-11">
                                    <span t-field="voucher.date"/>
                                    <t t-if="voucher.journal_id.use_preprint_check">
                                        <span t-esc="voucher.chk_seq"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row col-xs-12" style="margin-top:48px;">
                                <div class="text-left col-xs-offset-1 col-xs-4">
                                    <span t-field="voucher.partner_id.name"/>
                                </div>
                                <div class="text-left col-xs-1 col-xs-offset-6">
                                    <span t-esc="voucher.amount"/>
                                </div>
                            </div>
                            <div class="row" style="margin-top:11.34px;">
                                <div class="text-left col-xs-12">
                                     <span t-esc="fill_stars(voucher.amount_in_word)"/>
                                 </div>
                            </div>
                            <table style="margin-top:57.6px;">
                                <tr>
                                    <td>
                                        <span t-field="voucher.name"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                
                <table width="100%" height="288px;">
                    <tr>
                        <td style="vertical-align:top;">
                            <div class="row">
                                <div class="col-xs-5">
                                    <strong>
                                        <span t-field="voucher.partner_id.name"/>
                                    </strong>
                                </div>
                                <div class="col-xs-3 col-xs-offset-4">
                                    <strong>
                                        <span t-esc="formatLang(voucher.date , date=True)"/>
                                        <t t-if="voucher.journal_id.use_preprint_check">
                                            <span t-esc="voucher.chk_seq"/>
                                        </t>
                                    </strong>
                                </div>
                            </div>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-left">
                                            <strong>Due Date</strong>
                                        </th>
                                        <th class="text-left">
                                            <strong>Description</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Original Amount</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Open Balance</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Discount</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Payment</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <t t-foreach="get_lines(voucher.line_dr_ids)" t-as="l">
                                    <tr>
                                        <td class="text-left">
                                           <t t-if="l['date_due']">
                                                <span t-esc="formatLang(l['date_due'], date=True)"/>
                                            </t>
                                        </td>
                                        <td class="text-left">
                                           <span t-esc="l['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="formatLang( l['amount_original'])"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="formatLang( l['amount_unreconciled'])"/>
                                        </td>
                                        <td/>
                                        <td class="text-right">
                                            <span t-esc="formatLang( l['amount'])"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                           <table class="text-right" width="100%">
                                <tr>
                                    <td width="90%">
                                        <strong>Check Amount</strong>
                                    </td>
                                    <td>
                                        <strong><span t-field="voucher.amount"/></strong>
                                        <t t-if="voucher.journal_id.use_preprint_check">
                                            <span t-esc="voucher.chk_seq"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                
                <table width="100%" height="384px;">
                    <tr>
                        <td style="vertical-align:top;">
                            <div class="row" style="margin-top:48px;">
                                <div class="col-xs-5">
                                    <strong>
                                        <span t-field="voucher.partner_id.name"/>
                                    </strong>
                                </div>
                                <div class="col-xs-3 col-xs-offset-4">
                                    <strong>
                                        <span t-esc="formatLang(voucher.date , date=True)"/>
                                    </strong>
                                </div>
                            </div>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-left">
                                            <strong>Due Date</strong>
                                        </th>
                                        <th class="text-left">
                                            <strong>Description</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Original Amount</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Open Balance</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>Discount</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Payment</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <t t-foreach="get_lines(voucher.line_dr_ids)" t-as="l">
                                    <tr>
                                        <td class="text-left">
                                           <t t-if="l['date_due']">
                                                <span t-esc="formatLang(l['date_due'], date=True)"/>
                                            </t>
                                        </td>
                                        <td class="text-left">
                                           <span t-esc="l['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="formatLang( l['amount_original'])"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="formatLang( l['amount_unreconciled'])"/>
                                        </td>
                                        <td/>
                                        <td class="text-right">
                                            <span t-esc="formatLang( l['amount'])"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                            <table class="text-right" width="100%">
                                <tr>
                                    <td width="90%">
                                        <strong>Check Amount</strong>
                                    </td>
                                    <td>
                                        <strong><span t-field="voucher.amount"/></strong>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
</template>
</data>
</openerp> 