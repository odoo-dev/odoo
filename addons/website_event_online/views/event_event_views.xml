<?xml version="1.0"?>
<odoo><data>

    <record model="ir.ui.view" id="event_type_view_form">
        <field name="name">event.type.view.form.inherit.online</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="options">{'color_field': 'color', 'no_quick_create': True}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="event_event_view_form">
        <field name="name">event.event.view.form.inherit.online</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="options">{'color_field': 'color', 'no_quick_create': True}</attribute>
            </xpath>
            <xpath expr="//div[@name='date_interval']" position="after">
                <label for="hour_from" string="Opening Hours"/>
                <div class="o_row">
                    <field name="hour_from" widget="float_time" nolabel="1" class="oe_inline"/>
                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                    <field name="hour_to" widget="float_time" nolabel="1" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>

</data></odoo>
