                  animateImg="'true'">
            Scroll
        </WeButton>
        <WeButton id="'option_header_effect_fixed'"
                  customizeWebsiteVariable="`'fixed'`"
                  name="'header_effect_fixed_opt'"
                  selectClass="'o_header_fixed'"
                  customizeWebsiteViews="'website.header_visibility_fixed'"
