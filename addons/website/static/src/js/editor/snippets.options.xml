            Standard
        </WeButton>
        <WeButton id="'option_header_effect_scroll'"
                  customizeWebsiteVariable="`'scroll'`"
                  name="'header_effect_scroll_opt'"
                  selectClass="''"
                  customizeWebsiteViews="''"
