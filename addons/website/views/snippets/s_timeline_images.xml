<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template name="Timeline Images" id="s_timeline_images">
    <section class="s_timeline_images o_colored_level pt48 pb48">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pb24 text-center" data-name="Heading">
                    <h2 class="h3-fs">Evolving together</h2>
                    <p class="lead">Highlight your history, showcase growth and key milestones.</p>
                </div>
            </div>
            <div class="position-relative pt-3">
                <div class="s_timeline_images_row position-relative d-flex flex-column pb-4" data-name="Milestone">
                    <div class="o_dot_line position-absolute top-0 bottom-0 z-1 w-0 mb-1 border-start pe-none"/>
                    <span class="o_dot o_not_editable position-absolute translate-middle-x z-1 rounded-circle pe-none text-o-color-1" contenteditable="false"/>
                    <div class="s_timeline_content w-100">
                        <div class="s_timeline_images_card s_card card my-0 me-auto" style="border-width: 0px !important;" data-vxml="001" data-snippet="s_card" data-name="Milestone Event">
                            <div class="card-body ms-4">
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <small class="text-muted">13/06/2023</small>
                                        <h3 class="h4-fs card-title">First Milestone</h3>
                                    </div>
                                    <div class="col-12 col-lg-8">
                                        <p>
                                            <img src="/web/image/website.s_timeline_images_default_image_1" class="img img-fluid rounded" alt="" style="width: 100% !important;" />
                                        </p>
                                        <p class="card-text">A timeline is a graphical representation on which important events are marked.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="s_timeline_images_row position-relative d-flex flex-column pb-4" data-name="Milestone">
                    <div class="o_dot_line position-absolute top-0 bottom-0 z-1 w-0 mb-1 border-start pe-none"/>
                    <span class="o_dot o_not_editable position-absolute translate-middle-x z-1 rounded-circle pe-none text-o-color-1" contenteditable="false"/>
                    <div class="s_timeline_content w-100">
                        <div class="s_timeline_images_card s_card o_colored_level card my-0 me-auto" style="border-width: 0px !important;" data-vxml="001" data-snippet="s_card" data-name="Milestone Event">
                            <div class="card-body ms-4">
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <small class="text-muted">21/03/2021</small>
                                        <h3 class="h4-fs card-title">Second Milestone</h3>
                                    </div>
                                    <div class="col-12 col-lg-8">
                                        <p>
                                            <img src="/web/image/website.s_timeline_images_default_image_2" class="img img-fluid rounded" alt="" style="width: 100% !important;" />
                                        </p>
                                        <p class="card-text">A timeline is a graphical representation on which important events are marked.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</template>

<template id="s_timeline_images_options" inherit_id="website.snippet_options">
    <xpath expr="//t[@t-call='website.snippet_options_background_options']" position="after">
        <div data-js="MultipleItems" data-selector=".s_timeline_images">
            <we-row string="Date">
                <we-button data-add-item="" data-item=".s_timeline_images_row:first" data-select-item="" data-add-before="true" data-no-preview="true" class="o_we_bg_brand_primary">
                    Add Date
                </we-button>
            </we-row>
        </div>
    </xpath>
    <xpath expr="." position="inside">
        <div data-selector=".s_timeline_images_row" data-drop-near=".s_timeline_images_row"/>
        <div data-js="Timeline" data-selector=".s_timeline_images_card">
            <we-button data-timeline-card="" data-no-preview="true" class="o_we_overlay_opt"><i class="fa fa-fw fa-angle-left"/><i class="fa fa-fw fa-angle-right"/></we-button>
        </div>
    </xpath>
    <xpath expr="//t[@t-set='o_dot_color_selector']" position="attributes">
        <attribute name="t-valuef" add=".s_timeline_images .s_timeline_images_row" separator=", "/>
    </xpath>
    <xpath expr="//t[@t-set='o_dot_line_color_selector']" position="attributes">
        <attribute name="t-valuef" add=".s_timeline_images" separator=", "/>
    </xpath>
    <xpath expr="//div[@data-js='SnippetMove'][contains(@data-selector,'section')]" position="attributes">
        <attribute name="data-selector" add=".s_timeline_images_row" separator=","/>
    </xpath>
</template>

</odoo>
