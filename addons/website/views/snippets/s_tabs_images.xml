        <we-button data-set-direction="vertical" data-select-class="s_tabs_nav_vertical" data-apply-to=".s_tabs_nav" data-name="vertical_opt">Vertical</we-button>
    </xpath> -->
    <!-- <xpath expr="//we-button[@data-set-direction='vertical']" position="attributes">
        <attribute name="data-select-class">s_tabs_nav_vertical</attribute>
        <attribute name="data-apply-to">.s_tabs_nav > ul</attribute>
        <attribute name="data-name">vertical_opt</attribute>
