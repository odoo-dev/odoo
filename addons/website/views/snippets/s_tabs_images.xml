<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_tabs_images" name="Tabs Images">
<!-- Probleme: vu qu'il n'y a pas de vcss, il n'a pas l'air de prendre le common style -->
    <section class="s_tabs_common_style s_tabs_images pt48 pb48">
        <div class="o_container_small">
            <div class="s_tabs_main">
                <div class="s_tabs_nav mb-3" data-name="Tab Header">
                    <ul class="s_tabs_nav_vertical s_tabs_nav_with_decriptions nav nav-underline nav-justified flex-nowrap overflow-y-hidden overflow-x-auto" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="nav_tabs_images_link_1" data-bs-toggle="tab" href="#nav_tabs_images_content_1" role="tab" aria-controls="nav_tabs_images_content_1" aria-selected="true">
                                Home
                                <small class="o_nav_tabs_description text-muted">Description</small>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="nav_tabs_images_link_2" data-bs-toggle="tab" href="#nav_tabs_images_content_2" role="tab" aria-controls="nav_tabs_images_content_2" aria-selected="false">
                                Profile
                                <small class="o_nav_tabs_description text-muted">Description</small>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="nav_tabs_images_link_3" data-bs-toggle="tab" href="#nav_tabs_images_content_3" role="tab" aria-controls="nav_tabs_images_content_3" aria-selected="false">
                                Contact
                                <small class="o_nav_tabs_description text-muted">Description</small>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="s_tabs_content tab-content">
                    <div class="tab-pane fade show active" id="nav_tabs_images_content_1" role="tabpanel" aria-labelledby="nav_tabs_images_link_1">
                        <div class="oe_structure oe_empty">
                            <section class="s_text_block" data-snippet="s_text_block">
                                <div class="container s_allow_columns">
                                    <img src="/web/image/website.s_tabs_images_default_image_1" class="img img-fluid rounded" alt=""/>
                                </div>
                            </section>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav_tabs_images_content_2" role="tabpanel" aria-labelledby="nav_tabs_images_link_2">
                        <div class="oe_structure oe_empty">
                            <section class="s_text_block" data-snippet="s_text_block">
                                <div class="container s_allow_columns">
                                    <img src="/web/image/website.s_tabs_images_default_image_2" class="img img-fluid rounded" alt=""/>
                                </div>
                            </section>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav_tabs_images_content_3" role="tabpanel" aria-labelledby="nav_tabs_images_link_3">
                        <div class="oe_structure oe_empty">
                            <section class="s_text_block" data-snippet="s_text_block">
                                <div class="container s_allow_columns">
                                    <img src="/web/image/website.s_tabs_images_default_image_3" class="img img-fluid rounded" alt=""/>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</template>

<template id="s_tabs_images_snippet_options" inherit_id="website.snippet_options_tabs">
