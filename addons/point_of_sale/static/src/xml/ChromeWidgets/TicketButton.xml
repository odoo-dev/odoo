<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="TicketButton" owl="1">
        <div class="ticket-button d-flex align-items-center px-4 text-white cursor-pointer" t-att-class="{ highlight: props.isTicketScreenShown }" t-on-click="onClick">
            <div class="with-badge me-4 fs-5" t-att-badge="count">
                <i class="fa fa-ticket" aria-hidden="true"></i>
            </div>
            <div t-if="!env.isMobile">Orders</div>
        </div>
    </t>

</templates>
