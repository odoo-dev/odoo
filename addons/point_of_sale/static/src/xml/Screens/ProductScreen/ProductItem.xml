<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductItem" owl="1">
        <article class="product position-relative flex-grow-1 h-100 border bg-white overflow-hidden cursor-pointer" tabindex="0" t-on-keypress="spaceClickProduct"
                 t-on-click="() => this.trigger('click-product', props.product)"
                 t-att-data-product-id="props.product.id"
                 t-attf-aria-labelledby="article_product_{{props.product.id}}">
            <div class="product-img position-relative w-100 bg-white text-center">
                <img class="mw-100 h-100 o_object_fit_cover" t-att-src="imageUrl" t-att-alt="props.product.display_name" />
            </div>
            <div class="product-bottom d-flex flex-column px-2 py-1">
                <div class="product-name fw-bolder text-nowrap text-truncate" t-attf-id="article_product_{{props.product.id}}">
                    <t t-esc="props.product.display_name" />
                </div>
                <span class="price-tag text-muted">
                    <t t-esc="price" />
                </span>
            </div>
        </article>
    </t>

</templates>
