<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductsWidgetControlPanel" owl="1">
        <div class="products-widget-control">
            <t t-if="!props.hasNoCategories">
                <div class="rightpane-header d-flex p-0 text-center bg-white overflow-x-auto overflow-y-hidden" t-att-class="{
                    'green-border-bottom': !displayCategImages,
                    'grey-border-bottom': displayCategImages,
                }">
                    <!-- Breadcrumbs -->
                    <div class="breadcrumbs d-flex align-items-center justify-content-center">
                        <span class="breadcrumb d-flex align-items-center m-0 px-2 overflow-hidden">
                            <span class="breadcrumb-button breadcrumb-home d-flex align-items-center justify-content-center px-3 py-3 fs-3 cursor-pointer overflow-hidden" t-on-click="() => this.trigger('switch-category', 0)">
                                <i class="fa fa-home" role="img" aria-label="Home" title="Home"></i>
                            </span>
                        </span>
                        <t t-foreach="props.breadcrumbs" t-as="category" t-key="category.id">
                            <span class="breadcrumb d-flex align-items-center m-0 px-2 overflow-hidden">
                                <i class="fa fa-caret-right me-4" aria-hidden="true"></i>
                                <span class="breadcrumb-button d-flex align-items-center justify-content-center px-2 py-3 fw-bold cursor-pointer overflow-hidden"
                                    t-on-click="() => this.trigger('switch-category', category.id)">
                                    <t t-esc="category.name"></t>
                                </span>
                            </span>
                        </t>
                    </div>
                    <!-- Subcategories -->
                    <div t-if="props.subcategories.length > 0 and !displayCategImages"  class="category-list simple d-flex flex-grow-1 flex-shrink-1 p-0">
                        <t t-foreach="props.subcategories" t-as="category" t-key="category.id">
                            <span class="category-simple-button position-relative d-flex align-items-center py-2 px-4 bg-white overflow-hidden fw-bold text-700 text-truncate cursor-pointer"
                                t-on-click="() => this.trigger('switch-category', category.id)">
                                <t t-esc="category.name" />
                            </span>
                        </t>
                    </div>
                </div>
                <t t-if="props.subcategories.length > 0 and displayCategImages">
                    <div class="categories position-relative flex-basis-0 flex-grow-1 border-bottom bg-300">
                        <div class="category-list-scroller w-100 h-100 overflow-x-hidden overflow-y-auto">
                            <div class="category-list d-flex p-1">
                                <t t-foreach="props.subcategories" t-as="category" t-key="category.id">
                                    <CategoryButton category="category" />
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
            <t t-portal="'.pos .pos-topheader .search-bar-container.sb-product'">
                <span t-if="env.isMobile" class="oe_status oe_icon icon" t-on-click="_toggleMobileSearchbar">
                    <i t-attf-class="fa {{props.mobileSearchBarIsShown ? 'fa-arrow-left' : 'fa-search'}}"/>
                </span>
                <t t-if="!env.isMobile || props.mobileSearchBarIsShown">
                    <div class="pos-search-bar">
                        <i class="fa fa-search" t-on-click="_onPressEnterKey"/>
                        <input t-ref="search-word-input-product" placeholder="Search Products..." type="text" autofocus="autofocus" t-on-keyup="updateSearch" />
                        <i class="fa fa-times search-clear-partner" t-on-click="_clearSearch"/>
                    </div>
                </t>
            </t>
            <t t-portal="'.pos .search-database-button'">
                <div class="button highlight" t-on-click="_onPressEnterKey">
                    <i class="fa fa-search"/> Search database
                </div>
            </t>
        </div>
    </t>

</templates>
