<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ActionpadWidget">
        <div class="actionpad d-flex flex-column gap-2">
            <div t-if="ui.isSmall" class="d-flex gap-2">
                <SelectPartnerButton partner="props.partner"/>
                <button class="button mobile-more-button btn btn-light btn-lg flex-fill" t-if="props.onClickMore" t-on-click="props.onClickMore">
                    <span>Actions</span>
                </button>
            </div>
            <div class="d-flex flex-row-reverse gap-2">
                <button class="pay validation pay-order-button flex-fill"
                    t-attf-class="{{getMainButtonClasses()}}"
                    t-att-class="{'btn-secondary py-3': !props.isActionButtonHighlighted, 'btn-primary': props.isActionButtonHighlighted, 'with-more-button': props.onClickMore and ui.isSmall}"
                    t-on-click="props.actionToTrigger ? this.props.actionToTrigger : () => pos.pay()">
                    <div class="pay-circle d-flex align-items-center justify-content-center py-2 w-100">
                        <i class="oi oi-chevron-right" role="img" aria-label="Pay" title="Pay" />
                        <t class="text-white" t-esc="props.actionName" />
                    </div>
                </button>
            </div>
        </div>
    </t>

</templates>
