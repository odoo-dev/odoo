<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.Navbar">
        <div class="pos-topheader d-flex align-items-center px-2 py-1 m-0 bg-white border-bottom">
            <div class="pos-leftheader d-flex align-items-stretch flex-grow-1 gap-1">
                <button t-if="pos.showBackButton()" class="back-button btn btn-light btn-lg lh-lg" t-on-click="onClickBackButton">
                    <img height="22" src="/point_of_sale/static/src/img/tableIcon.svg" alt="Return to floor plan"/>
                    <!-- <i class="fa fa-2x fa-angle-left pb-1" role="img" aria-label="Go Back" title="Go Back" /> -->
                </button>
            </div>
            <div t-if="!ui.isSmall"  class="pos-centerheader d-flex justify-content-center">
                <img class="pos-logo pos-logo mw-100" height="42" t-on-click="() => debug.toggleWidget()" src="/web/static/img/logo.png" alt="Logo" />
            </div>
            <div class="pos-rightheader d-flex flex-grow-1 justify-content-end" t-if="pos.shouldShowNavbarButtons()">
                <div class="status-buttons d-flex flex-grow-1 align-items-center justify-content-end gap-1">
                    <Input tModel="[pos, 'searchProductWord']"
                    class="'p-0'"
                    isSmall="ui.isSmall"
                    placeholder="'Search products...'"
                    icon="{type: 'fa', value: 'fa-search'}"
                    debounceMillis="500"
                    t-if="pos.showSearchButton()" />
                    <button class="btn btn-light btn-lg lh-lg" t-if="isBarcodeScannerSupported() and pos.mainScreen.component.name == 'ProductScreen'" t-on-click="onClickScan">
                        <i class="fa fa-fw fa-barcode" /><span t-if="this.pos.scanning" class="ms-1">Stop</span>
                    </button>
                    <SyncNotification />
                    <CashierName />
                    <Dropdown>
                        <button class="btn btn-light btn-lg lh-lg">
                            <i class="fa fa-fw fa-bars"/>
                        </button>
                        <t t-set-slot="content">
                            <div class="d-flex gap-2 p-2 border-bottom">
                                <ProxyStatus t-if="pos.config.use_proxy" />
                                <span t-if="customerFacingDisplayButtonIsShown" t-on-click="openCustomerDisplay" class="btn btn-secondary btn-lg w-100 text-center" title="Customer Display">
                                    <i class="fa fa-fw fa-desktop"/>
                                </span>
                            </div>
                            <div class="p-2">
                                <DropdownItem onSelected="() => this.pos.onTicketButtonClick()">
                                    Orders <span t-if="orderCount gt 0" class="badge text-bg-info rounded-pill py-1 ms-2 float-end" t-esc="orderCount"/>
                                </DropdownItem>
                                <DropdownItem t-if="showCashMoveButton" onSelected="() => this.onCashMoveButtonClick()">
                                    Cash In/Out
                                </DropdownItem>
                                <DropdownItem t-if="showToggleProductView" onSelected="() => this.toggleProductView()">
                                    Switch Product View
                                </DropdownItem>
                                <DropdownItem t-if="showCreateProductButton" onSelected="() => this.pos.editProduct()">
                                    Create Product
                                </DropdownItem>
                                <DropdownItem t-if="hardwareProxy.printer" onSelected="() => this.showSaleDetails()">
                                    Print Report
                                </DropdownItem>
                                <DropdownItem onSelected="() => pos.closePos()">
                                    Backend
                                </DropdownItem>
                                <DropdownItem onSelected="() => this.closeSession()">
                                    Close Register
                                </DropdownItem>
                                <DropdownItem t-if="this.env.debug" onSelected="() => debug.toggleWidget()">
                                    Debug Window
                                </DropdownItem>
                            </div>
                        </t>
                    </Dropdown>
                </div> 
            </div>
        </div>
    </t>

</templates>
