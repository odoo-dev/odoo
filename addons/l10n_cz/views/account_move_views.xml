<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_l10n_cz" model="ir.ui.view">
        <field name="name">account.move.form.l10n_cz</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='due_date']" position="after">
                <field name="taxable_supply_date"
                       invisible="country_code != 'CZ'"
                       required="reverse_charge"
                       readonly="state != 'draft'"
                />
            </xpath>
            <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                <field name="reverse_charge"
                       invisible="country_code != 'CZ'"
                       readonly="state != 'draft'"
                />
            </xpath>
            <xpath expr="//field[@name='reverse_charge']" position="after">
                <field name="scheme_code"
                       invisible="country_code != 'CZ' or reverse_charge"
                       readonly="state != 'draft'"
                />
            </xpath>
            <xpath expr="//field[@name='reverse_charge']" position="after">
                <field name="supplies_code_reverse_charge"
                       invisible="country_code != 'CZ' or not reverse_charge"
                       required="reverse_charge"
                       readonly="state != 'draft'"
                />
            </xpath>
        </field>
    </record>
</odoo>
