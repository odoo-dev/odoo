<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="LandingPage" owl="1">
        <div class="o_so_landing_page d-flex flex-column vh-100 justify-content-between align-items-center p-4">
            <LandingPageHeader/>
            <div class="d-flex flex-column flex-grow-1 w-100 justify-content-end mb-2">
    <!-- View Menu -->
                <button type="button" t-on-click="()=>env.navigate('/products')"
                t-attf-class="btn btn-primary btn-lg my-2 rounded">
                    View Menu
                </button>
                <hr class="my-2"/>
    <!-- Custom Links -->
                <t t-foreach="selfOrder.config.custom_links" t-as="link" t-key="link.id">
                    <a t-attf-href="//{{link.url}}" t-attf-class="btn btn-lg my-2 btn-{{link.style}} rounded">
                        <t t-esc="link.name"/>
                    </a>
                </t>
            </div>
            <LandingPageFooter/>
        </div>
    </t>
</templates>

