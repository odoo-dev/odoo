<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelfOrderRoot" owl="1">
        <Router>
            <t t-set-slot="default">
                <LandingPage 
                    message_to_display="this.state.message_to_display" 
                    productList="productList" 
                />
            </t>
            <t t-set-slot="/pos-self-order/products">
                <ProductList
                    productList="productList" 
                />
            </t>
            <t t-set-slot="/pos-self-order/products/{int:productId}" t-slot-scope="url">
                <ProductMainView t-debug="" 
                    product="productList.find(x => x.product_id === url.productId)" 
                />
            </t>
        </Router>
    </t>
</templates>

