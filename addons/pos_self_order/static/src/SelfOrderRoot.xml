<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelfOrderRoot" owl="1">
        <Router>
            <t t-set-slot="default">
                <LandingPage/>
            </t>
            <t t-set-slot="/menu/products">
                <ProductList
                    productList="productList" 
                />
            </t>
            <t t-set-slot="/menu/products/{int:productId}" t-slot-scope="url">
                <ProductMainView 
                    product="productList.find(x => x.product_id === url.productId)" 
                />
            </t>
        </Router>
    </t>
</templates>

