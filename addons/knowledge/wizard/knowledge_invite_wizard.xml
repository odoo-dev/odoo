<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_knowledge_invite_wizard" model="ir.ui.view">
        <field name="name">knowledge.invite.wizard.view</field>
        <field name="model">knowledge.invite.wizard</field>
        <field name="arch" type="xml">
            <form class="py-0">
                <field name="article_id" invisible="1"/>
                <field name="have_share_partners" invisible="1"/>
                <div class="alert alert-warning mt-3" role="alert" attrs="{'invisible': ['|', ('have_share_partners', '=', False), ('permission', '!=', 'write')]}">
                    <i class="fa fa-w fa-warning"/> All the external users you selected will only have a read access.
                </div>
                <div class="alert alert-info mt-3" role="alert" attrs="{'invisible': ['|', ('have_share_partners', '=', False), ('permission', '!=', 'none')]}">
                    <i class="fa fa-w fa-info-circle"/> All the external users you selected won't be added to the members.
                </div>
                <group>
                    <field name="permission"/>
                    <field name="partner_ids" widget="many2many_tags_email"
                        placeholder="Invite users (email address)..."
                        context="{'force_email': True, 'show_email': True}"/>
                </group>
                <footer>
                    <button string="Invite" type="object" name="action_invite_members" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
