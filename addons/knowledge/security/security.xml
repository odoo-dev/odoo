<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="knowledge_user_own_articles" model="ir.rule">
        <field name="name">Private and public articles</field>
        <field name="model_id" ref="model_knowledge_article"/>
        <field name="domain_force">['|', ('owner_id','=',user.id), ('owner_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

        <record id="knowledge_system_all_articles" model="ir.rule">
        <field name="name">Private and public articles</field>
        <field name="model_id" ref="model_knowledge_article"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>
