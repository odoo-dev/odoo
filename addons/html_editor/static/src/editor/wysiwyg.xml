<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="html_editor.Wysiwyg">
        <div class="o-wysiwyg" t-att-class="props.class" t-att-style="props.style">
            <t t-if="props.toolbar and state.showToolbar">
                <Toolbar toolbar="editor.shared.getToolbarInfo()" />
            </t>
            <t t-if="props.iframe">
                <iframe t-ref="content" class="w-100 h-100"/>
            </t>
            <t t-else="">
                <div class="p-1" t-ref="content"/>
            </t>
        </div>
    </t>
</templates>
