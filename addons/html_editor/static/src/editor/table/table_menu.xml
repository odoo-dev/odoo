<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="html_editor.TableMenu">
        <Dropdown menuClass="'m-0'" position="props.type === 'column' ? 'bottom' : 'right'">
            <button t-ref="root" t-att-data-type="props.type" class="o-we-table-menu fa" t-attf-class="fa-ellipsis-{{props.type === 'column' ? 'h' : 'v'}}">
            </button>
            <t t-set-slot="content">
                <t t-foreach="items" t-as="item" t-key="item_index">
                    <DropdownItem onSelected="() => this.onSelected(item)">
                        <div class="user-select-none" t-att-name="item.name">
                            <span t-if="item.icon" class="me-2 fa" t-att-class="item.icon"/>
                            <span t-esc="item.text"/>
                        </div>
                    </DropdownItem>
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
