<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="html_editor.Playground">
      <div class="d-flex">
        <div class="p-2">
            <div>
                <h3>Editor Config</h3>
                <div class="m-1 form-check"><input class="form-check-input" type="checkbox" id="showToolbar" t-model="config.showToolbar"/><label for="showToolbar" class="form-check-label">Show Toolbar</label></div>
                <div class="m-1 form-check"><input class="form-check-input" type="checkbox" id="inIframe" t-model="config.inIframe"/><label for="inIframe" class="form-check-label">in iframe</label></div>
            </div>
            <div class="">
                <h3>Playground Config</h3>
                <div class="m-1 form-check"><input class="form-check-input" type="checkbox" id="displayCurrentEditor" t-model="state.showWysiwyg"/><label for="displayCurrentEditor" class="form-check-label">Display Current Editor</label></div>
            </div>
        </div>
        <div>
            <div class="d-flex justify-content-center">
                <Wysiwyg
                    content="testHtml"
                    class="'m-2'"
                    style="`width:600px;border:1px solid lightgrey; min-height: 500px;max-height:500px;${!config.inIframe ? 'overflow:auto;' : ''}`"
                    t-key="window.JSON.stringify(config)"
                    iframe="config.inIframe"
                    toolbar="config.showToolbar"/>
            </div>
            <t t-if="state.showWysiwyg">
                <div class="d-flex justify-content-center">
                    <div class="m-2 p-1" style="width:600px;min-height: 500px;max-height:500px;overflow:auto;">
                        <CurrentWysiwyg options="{value: testHtml}" startWysiwyg="startWysiwyg" />
                    </div>
                </div>
            </t>
        </div>
      </div>
    </t>
</templates>