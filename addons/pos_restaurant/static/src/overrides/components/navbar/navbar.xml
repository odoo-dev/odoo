<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//DropdownItem[contains(text(), 'Backend')]" position="before">
            <t t-if="pos.mainScreen.component.name == 'FloorScreen'">
                <DropdownItem t-if="showEditPlanButton" onSelected="() => this.pos.toggleEditMode()">
                    Edit Plan
                </DropdownItem>
            </t>
            <DropdownItem t-if="pos.mainScreen.component.name == 'FloorScreen'" onSelected="() => this.onSwitchButtonClick()">
                Switch Floor View
            </DropdownItem>
        </xpath>
        <xpath expr="//div[hasclass('pos-leftheader')]" position="inside">
            <div t-if="pos.config.module_pos_restaurant" class="d-flex align-items-stretch flex-grow-1 flex-shrink-0 gap-1 position-relative">
                <button class="back-button btn btn-lg lh-lg" t-attf-class="{{ isFloorScreenActive() ? 'btn-primary' : '' }}" t-on-click="onClickPlanButton">
                    Plan
                </button>
                <button t-if="showSwitchTableButton" class="btn btn-lg lh-lg" t-on-click="() => this.switchTable()">Table</button>   

                <button t-if="showTableNumber"
                    class="table-free-order-label btn btn-lg lh-lg"
                    t-att-class="{'btn-primary' : getTable()}"
                    t-on-click="() => this.switchTable()"
                >
                    Table <small class="px-2 py-1 rounded bg-dark bg-opacity-25 fw-bolder"><t t-esc="getTable().getName()"/></small>
                </button>   

                <div t-if="pos.get_order() and !pos.get_order()?.table_id" t-attf-class="table-free-order-label btn btn-primary btn-lg lh-lg">
                    <t t-if="!ui.isSmall" t-esc="pos.get_order().getFloatingOrderName()"/>
                </div>        
                <t t-if="!pos.orderToTransferUuid">
                    <div t-if="!pos.selectedOrderUuid and !pos.selectedTable" t-attf-class="d-flex overflow-x-auto {{ ui.isSmall ? 'flex-shrink-0' : 'flex-shrink-1'}}">
                        <div t-if="!ui.isSmall" class="ms-1 me-2 my-2 border-end border"/>
                        <ListContainer items="getFloatingOrders()" t-slot-scope="scope">
                            <t t-set="order" t-value="scope.item"/>
                            <button t-esc="order.getFloatingOrderName()" class="btn btn-lg lh-lg tab text-nowrap" t-on-click="() => this.selectFloatingOrder(order)"/>
                        </ListContainer>
                    </div>
                    <button t-if="!pos.selectedOrderUuid" class="btn btn-light btn-lg border-transparent lh-lg" style="padding: 0.3125rem 0.625rem;" t-on-click="newFloatingOrder">
                        <i class="fa fa-fw fa-lg fa-plus-circle" aria-hidden="true"/>
                    </button>
                </t>
                <div class="d-flex align-items-center" t-else="">
                    <strong class="ms-2">
                        Select table to transfer order
                    </strong>
                </div>
            </div>
        </xpath>
    </t>
</templates>
