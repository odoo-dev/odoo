<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SubmitOrderButton" owl="1">
        <t t-if="env.pos.config.module_pos_restaurant &amp;&amp; env.pos.unwatched.printers.length">
            <div class="actionpad mt-3">
                <button class="button d-flex flex-row-reverse align-items-center justify-content-between w-100 px-3 py-3 rounded-0 border-top border-bottom fw-bold" t-att-class="addedClasses" t-on-click="_onClick">
                    <t t-if="!env.isMobile">
                        <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x text-300"/>
                            <i class="fa fa-cutlery fa-stack-1x" role="img" aria-label="Order" title="Order" />
                        </span>
                    </t>
                    <span>Send Order</span>
                </button>
            </div>
        </t>
    </t>

</templates>
