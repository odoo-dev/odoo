<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldMany2one" owl="1">
        <t t-if="props.mode === 'edit'">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
        <t t-else="">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
    </t>

    <t t-name="web.FieldMany2ManyTags" owl="1">
        <span class="o-field">
            <t t-foreach="data" t-as="tag" t-key="tag">
                <div class="badge badge-pill">
                    <t t-esc="tag" />
                </div>
            </t>
        </span>
    </t>

</templates>
