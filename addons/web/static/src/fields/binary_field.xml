<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.BinaryField" owl="1">
        <div class="o_field_binary_file" aria-atomic="true">
            <t t-if="props.readonly and file.data">
                <FileDownloader file="file" onDownload.bind="onFileDownload"/>
            </t>
            <t t-elif="!props.readonly">
                <FileUploader
                    acceptedFileExtensions="props.acceptedFileExtensions"
                    file="file"
                    onUploaded.bind="onFileUploaded"
                    onRemove.bind="onFileRemove"
                />
            </t>
        </div>
    </t>

</templates>
