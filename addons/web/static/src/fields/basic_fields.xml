<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldChar" owl="1">
        <t t-if="props.mode === 'edit'">
            <input class="o-field" t-att-value="data or ''" />
        </t>
        <t t-else="">
            <span class="o-field">
                <t t-esc="data" />
            </span>
        </t>
    </t>

    <t t-name="web.FieldBoolean" owl="1">
        <CheckBox class="o-field" disabled="props.mode !== 'edit'" value="data" />
    </t>

    <t t-name="web.FieldImage" owl="1">
        <img class="img img-fluid" alt="Binary file" t-att-src='url' t-att-border="props.readonly ? 0 : 1" t-att-name="props.name" />
    </t>

</templates>
