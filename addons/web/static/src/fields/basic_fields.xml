<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldChar" owl="1">
        <span t-if="props.readonly" t-esc="props.value"/>
        <input t-else="" t-on-change="onChange" t-att-value="props.value"/>
    </t>

    <t t-name="web.FieldBoolean" owl="1">
        <CheckBox disabled="props.readonly" value="props.value" />
    </t>

    <t t-name="web.FieldImage" owl="1">
        <img class="img img-fluid" alt="Binary file" t-att-src="url" t-att-border="props.readonly ? 0 : 1" t-att-name="props.name" />
    </t>

</templates>
