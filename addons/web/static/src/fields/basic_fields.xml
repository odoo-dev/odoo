<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FieldChar" owl="1">
        <span t-if="props.readonly" t-esc="props.value" />
        <input t-else="" class="o_input" t-on-change="onChange" t-att-value="props.value" />
    </t>

    <t t-name="web.FieldText" owl="1">
        <span t-if="props.readonly" t-esc="props.value" />
        <textarea t-else="" class="o_input" t-on-change="onChange" t-att-value="props.value" />
    </t>

    <t t-name="web.FieldBoolean" owl="1">
        <CheckBox disabled="props.readonly" value="props.value" t-on-change="onChange" />
    </t>

    <t t-name="web.FieldSelection" owl="1">
        <span t-if="props.readonly" t-esc="props.string" />
        <select t-else="" t-on-change="onChange" t-att-value="value">
            <t t-foreach="selection" t-as="val" t-key="val">
                <option t-att-value="val" t-esc="selection[val]" />
            </t>
        </select>
    </t>

    <t t-name="web.FieldImage" owl="1">
        <img class="img img-fluid" alt="Binary file" t-att-src="url" t-att-border="props.readonly ? 0 : 1" t-att-name="props.name" />
    </t>

    <t t-name="web.FieldPriority" owl="1">
        <div class="o_priority o_field_widget" role="radiogroup" name="priority" aria-label="Priority">
            <t t-foreach="selection" t-as="val" t-key="val">
                <a t-if="!val_first"
                    href="#"
                    class="o_priority_star fa"
                    t-att-class="val_index lte index ? 'fa-star' : 'fa-star-o'"
                    role="radio"
                    t-att-title="selection[val]"
                    t-att-aria-checked="val_index lte index"
                    t-att-aria-label="selection[val]"
                    t-att-tabindex="val lte state.index ? 0 : -1"
                    t-on-mouseenter="() => state.index = val_index"
                    t-on-mouseleave="() => state.index = -1"
                    t-on-click="onStarClicked(val)"
                />
            </t>
        </div>
    </t>

</templates>
