<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.DateRangeField" owl="1">
        <t t-if="props.readonly">
            <t t-esc="formattedValue" />
        </t>
        <t t-else="">
            <input t-ref="root" type="text" t-att-value="formattedValue" t-on-change="onChangeInput" />
            <i t-if="props.displayArrow" class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow" />
        </t>
    </t>

</templates>
