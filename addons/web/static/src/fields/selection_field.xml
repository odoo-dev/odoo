<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SelectionField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="string" />
        </t>
        <t t-else="">
            <select class="o_input" t-on-change="onChange" t-att-value="value">
                <t t-set="options" t-value="selection" />
                <t t-if="!props.required">
                    <option value="" t-esc="props.placeholder" />
                </t>
                <t t-foreach="options" t-as="option" t-key="option">
                    <option t-att-value="option" t-esc="options[option]" />
                </t>
            </select>
        </t>
    </t>

</templates>
