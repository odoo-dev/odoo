<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.DateField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="formattedValue" />
        </t>
        <t t-else="">
            <DatePicker
                t-props="datePickerOptions"
                date="date or null"
                onDateTimeChanged="(date) => props.update(date)"
            />
        </t>
    </t>

</templates>
