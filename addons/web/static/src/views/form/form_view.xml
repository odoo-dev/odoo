<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.FormView" owl="1">
        <Layout viewType="'form'" useSampleModel="model.useSampleModel">
            <t t-set-slot="control-panel-bottom-left">
                <t t-call="{{ constructor.buttonTemplate }}" />
            </t>
            <t t-set-slot="control-panel-bottom-right">
                <div role="search" class="o_cp_pager">
                    <Pager t-props="pagerProps" />
                </div>
            </t>
            <FormRenderer record="model.root" fields="props.fields" info="archInfo" readonly="false" />
        </Layout>
    </t>

    <t t-name="web.FormView.Buttons" owl="1">
        <div role="toolbar" aria-label="Main actions">
            <button t-if="canEdit" type="button" class="btn btn-secondary" data-tooltip="Save changes" data-hotkey="s" t-on-click="saveRecord">
                Save
            </button>
            <button t-if="canCreate" type="button" class="btn btn-secondary" data-tooltip="Create record" data-hotkey="c" t-on-click="createRecord">
                Create
            </button>
        </div>
    </t>

</templates>
