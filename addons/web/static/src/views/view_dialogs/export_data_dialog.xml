<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ExportDataDialog" owl="1">
        <Dialog contentClass="'o_export_data_dialog'" title="title" size="'lg'">
            <div class="col-12 col-md-6 o_left_panel">
                <div class="o_import_compat">
                    <CheckBox className="'o_import_compat'" id="'o-update-data'" value="state.importCompatibleData" onChange.bind="onCompatibleDataChange">
                        <span>I want to update data (import-compatible export) </span>
                    </CheckBox>
                </div>
                <h4 class="mt-3">Available fields</h4>
                    <input type="search" class="form-control mb-3 o_export_search_input" id="o-export-search-filter" placeholder="Search" />
                <div class="border o_left_field_panel">
                    <div class="o_field_tree_structure">
                        <t t-foreach="fieldsAvailable" t-as="field" t-key="field">
                            <div t-att-data-field_id="field.name" class="o_export_tree_item " role="treeitem"> 
                                <div class="o_tree_column">
                                    <span t-esc="field.string" />
                                    <span title="Select field" t-attf-class="fa fa-plus float-end m-1 o_add_field {{ isFieldSelected(field.name) ? 'o_inactive' : '' }}" t-on-click.stop="(ev) => !this.isFieldSelected(field.name) and this.onAddItemExportList(ev)" />
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 o_right_panel mt-3 mt-md-0">
                <div class="o_export_format">
                    <strong>Export Format:</strong>
                    <t t-foreach="availableFormats" t-as="format" t-key="format.tag">
                        <div class="radio form-check form-check-inline pl-4">
                            <input t-att-id="'o_radio' + format.tag" type="radio" t-att-checked="format.tag === availableFormats[state.selectedFormat].tag" name="o_export_format_name" t-att-value="format.tag" class="form-check-input" />
                            <label class="form-check-label" t-att-for="'o_radio' + format.tag" t-esc="format.label" />
                        </div>
                    </t>
                </div>
                <div class="mt-3">
                    <h4>Fields to export</h4>
                </div>
                <div class="o_exported_lists">
                    <div class="input-group mb-3">
                        <t t-if="state.templateSelection === 'new_template'">
                            <label class="pt-2 mb-0 font-weight-bold">Save as: </label>
                            <input t-ref="exportList" class="form-control ml-4 o_save_list_name" t-att-placeholder="newTemplateText" />
                        </t>
                        <t t-else="">
                            <label class="pt-2 mb-0 font-weight-bold">Template: </label>
                            <select class="form-control ml-4 o_exported_lists_select" t-on-change="onChangeExportList">
                                <option />
                                <t t-foreach="templates" t-as="template" t-key="template.id">
                                    <option t-att-value="template.id" t-esc="template.name" t-att-selected="state.templateSelection === template.id" />
                                </t>
                                <option class="font-italic" value="new_template">New template </option>
                            </select>
                        </t>
                        <t t-if="state.templateisEditing">
                            <button type="button" class="btn btn-secondary ml-1 o_save_list_btn" t-on-click.stop="onSaveExportListEdition">
                                <i class="fa fa-floppy-o" />
                            </button>
                            <button type="button" class="btn btn-secondary ml-1 o_cancel_list_btn" t-on-click.stop="onClearExportListEdition">
                                <i class="fa fa-times" />
                            </button>
                        </t>
                        <t t-else="">
                            <button t-if="state.templateSelection" type="button" class="btn btn-secondary ml-1 o_delete_exported_list" t-on-click.stop="onClearExportListEdition">
                                <i class="fa fa-trash" />
                            </button>
                        </t>
                    </div>
                </div>
                <div class="border o_right_field_panel">
                    <ul class="o_fields_list list-unstyled" t-ref="draggable">
                        <t t-foreach="fieldsToExport" t-as="field" t-key="field">
                            <li class="o_export_field" t-att-data-field_id="field.name">
                                <span class="fa fa-sort o_sort_field mx-1" t-attf-style="opacity:{{ fieldsToExport.length === 1 ? 0 : 1 }}" />
                                <span t-esc="field.string" />
                                <span class="fa fa-trash m-1 float-end o_remove_field" t-att-title="removeFieldText" t-on-click.stop="onRemoveItemExportList" />
                            </li>
                        </t>
                    </ul>
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary o_select_button" data-hotkey="v" t-on-click.stop="onExportButtonClicked">Export</button>
                <button class="btn o_form_button_cancel" t-att-class="(props.disableMultipleSelection &amp;&amp; props.noCreate) ? 'btn-primary' : 'btn-secondary'" data-hotkey="z" t-on-click.stop="close">Close</button>
            </t>
        </Dialog>
    </t>

</templates>
