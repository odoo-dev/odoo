<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="web.FormViewDialogBody" owl="1">
    <FormRenderer class="'o_form_view'" record="record" fields="archInfo.fields" archInfo="archInfo"/>
  </t>

  <t t-name="web.FormViewDialogFooter" owl="1">
    <t t-if="footerArchInfo.length">
        <t t-foreach="footerArchInfo" t-as="footArch" t-key="footArch.arch">
            <FormRenderer record="record" archInfo="footArch"/>
        </t>
    </t>
    <t t-else="">
      <t t-if="!readonly and multiSelect">
        <button class="btn btn-primary o_form_button_save" t-on-click="save" data-hotkey="c">Save &amp; Close</button>
        <button class="btn btn-primary o_form_button_save_new" t-on-click="saveNew" data-hotkey="n">Save &amp; New</button>
        <button class="btn btn-secondary o_form_button_cancel" t-on-click="discard" data-hotkey="j">Discard</button>
      </t>
      <t t-elif="!readonly">
        <button class="btn btn-primary o_form_button_save" t-on-click="save" data-hotkey="c">Save</button>
        <button class="btn btn-secondary o_form_button_cancel" t-on-click="discard" data-hotkey="j">Discard</button>
      </t>
      <t t-else="">
        <button class="btn btn-primary o_form_button_cancel" t-on-click="discard" data-hotkey="j">Close</button>
      </t>
    </t>
  </t>

</templates>
