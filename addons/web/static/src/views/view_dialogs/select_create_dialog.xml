<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SelectCreateDialog" owl="1">
        <Dialog title="props.title">
            <View t-props="propsView"/>
            <t t-set-slot="footer">
                <t t-if="props.multiSelect">
                    <button class="btn btn-primary o_select_button" t-att-disabled="state.resIds.length === 0" data-hotkey="v" t-on-click="select">Select</button>
                </t>
                <t t-if="!props.noCreate">
                    <button class="btn btn-primary" data-hotkey="c" t-on-click="createEditRecord">Create</button>
                </t>
                <button class="btn o_form_button_cancel" t-att-class="(props.disableMultipleSelection &amp;&amp; props.noCreate) ? 'btn-primary' : 'btn-secondary'" data-hotkey="z" t-on-click="close">Cancel</button>
            </t>
        </Dialog>
    </t>

</templates>
