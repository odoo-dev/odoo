<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.KanbanAnimatedNumber" owl="1">
        <div class="o_kanban_counter_side" t-att-class="state.value !== props.value and props.animationClass" t-att-title="props.title">
            <span t-if="props.currency and props.currency.position === 'before'" t-esc="props.currency.symbol" />
            <b t-esc="format(state.value)" />
            <span t-if="props.currency and props.currency.position === 'after'" t-esc="props.currency.symbol" />
        </div>
    </t>

</templates>
