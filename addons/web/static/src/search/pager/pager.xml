<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.Pager" owl="1">
        <nav class="o_pager" aria-label="Pager">
            <span class="o_pager_counter mr-2" t-on-click.stop="">
                <t t-if="state.isEditing">
                    <input
                        type="text"
                        class="o_pager_value o_input"
                        autofocus=""
                        t-att-value="value"
                        t-on-change="onInputChange"
                        t-on-blur="onInputBlur"
                        t-on-keydown.stop="onInputKeydown"
                    />
                </t>
                <t t-else="">
                    <span
                        class="o_pager_value"
                        t-esc="value"
                        t-on-click="onValueClick"
                    />
                </t>
                <span> / </span>
                <span class="o_pager_limit" t-esc="props.size" />
            </span>
            <span class="btn-group" aria-atomic="true">
                <!-- accesskeys not wanted in X2Many widgets -->
                <button
                    type="button"
                    class="fa fa-chevron-left btn btn-secondary o_pager_previous px-2 rounded-left"
                    aria-label="Previous"
                    title="Previous"
                    tabindex="-1"
                    t-att-accesskey="props.withAccessKey ? 'p' : false"
                    t-att-disabled="state.isDisabled or isSinglePage"
                    t-on-click.stop="onPreviousPageClick"
                />
                <button
                    type="button"
                    class="fa fa-chevron-right btn btn-secondary o_pager_next px-2 rounded-right"
                    aria-label="Next"
                    title="Next"
                    tabindex="-1"
                    t-att-accesskey="props.withAccessKey ? 'n' : false"
                    t-att-disabled="state.isDisabled or isSinglePage"
                    t-on-click.stop="onNextPageClick"
                />
            </span>
        </nav>
    </t>

</templates>
