<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CopyButton" owl="1">
        <button
            t-attf-class="btn btn-sm btn-primary o_clipboard_button {{ props.className || '' }} {{state.isCopied ? 'bg-success' : ''}}"
            t-ref="copyBtn"
            t-att-data-clipboard-text="props.value"
        >
            <span t-if="!state.isCopied"><span class="fa fa-clipboard mx-1"></span>Copy</span>
            <span t-else=""><span class="fa fa-check mx-1"></span>Copied</span>
        </button>
    </t>

</templates>
