<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.Notebook" owl="1">
        <div t-attf-class="o_notebook d-flex {{ props.orientation }} {{ props.className }}" t-if="state.currentPage">
            <div class="o_notebook_headers">
                <ul t-attf-class="nav {{ props.orientation === 'horizontal' ? 'nav-tabs' : 'nav-pills flex-column' }}">
                    <li t-foreach="props.slots" t-as="page" t-key="page" class="nav-item" t-if="page_value.isVisible">
                        <a class="nav-link" t-on-click.prevent="() => state.currentPage = page" href="#" role="tab" t-att-class="{ active: page === state.currentPage}" t-esc="page_value.title"/>
                    </li>
                </ul>
            </div>
            <div class="o_notebook_content tab-content">
                <div class="tab-pane active" t-ref="activePane">
                    <t t-slot="{{ state.currentPage }}"/>
                </div>
            </div>
        </div>
    </t>

</templates>
