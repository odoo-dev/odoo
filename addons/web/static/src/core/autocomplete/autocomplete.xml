<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.AutoComplete" owl="1">
        <div class="o-autocomplete dropdown">
            <input
                type="text"
                class="o-autocomplete--input o_input"
                t-att-value="props.value"
                t-on-click="onInputClick"
                t-on-input="onInput"
                t-on-change="onChange"
                t-ref="input"
            />
            <t t-if="state.opened">
                <ul class="o-autocomplete--dropdown-menu dropdown-menu ui-widget ui-autocomplete show">
                    <t t-foreach="state.suggestions" t-as="suggestion" t-key="suggestion.id">
                        <li class="o-autocomplete--dropdown-item ui-menu-item" t-att-class="suggestion.classList" t-on-click.prevent="onSuggestionSelected(suggestion)">
                            <a class="dropdown-item ui-menu-item-wrapper" href="#" t-esc="suggestion.label" />
                        </li>
                    </t>
                </ul>
            </t>
        </div>
    </t>

</templates>
