<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="web.CheckBox" owl="1">
    <div class="custom-control custom-checkbox" t-att-class="props.className">
        <input
            t-att-id="props.id or id"
            type="checkbox"
            class="custom-control-input"
            t-att-disabled="props.disabled"
            t-att-checked="props.value"
            t-on-change="(ev) => props.onChange(ev.target.checked)"
            t-on-keydown="(ev) => props.onKeydown({ key: ev.key })"
            />
        <label t-att-for="props.id or id" class="custom-control-label">
            <t t-slot="default"/>
        </label>
    </div>
</t>

</templates>
