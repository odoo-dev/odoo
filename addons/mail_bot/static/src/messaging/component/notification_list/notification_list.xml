<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.messaging.component.NotificationList" t-inherit-mode="extension">
        <xpath expr="//*[@name='separatorCondition']" position="before">
            <t t-if="notification.type === 'odoobotRequest'">
                <NotificationRequest
                    class="o_NotificationList_notificationRequest"
                    t-att-class="{ 'o-mobile': env.entities.Device.instance.isMobile }"
                />
            </t>
        </xpath>
    </t>
</templates>
