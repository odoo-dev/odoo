<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <template id="event_booth_registration" inherit_id="website_event_booth.event_booth_registration">
        <xpath expr="//input[@name='booth_category_id']" position="attributes">
            <attribute name="t-att-data-use-sponsor">'true' if booth_category.use_sponsor else 'false'</attribute>
        </xpath>
    </template>

    <template id="event_booth_details" inherit_id="website_event_booth.event_booth_details">
        <xpath expr="//div[@id='o_wevent_contact_details']" position="before">
            <div id="o_wevent_sponsor_details" t-if="booth_category_id.use_sponsor">
                <h4 class="mt32">
                    <strong>Sponsor Details</strong>
                </h4>
                <div class="form-text text-muted mb16">
                    This booth type allows you to have visibility on the event website. Please fill in this form
                </div>
                <div class="row form-group">
                    <label class="col-form-label col-sm-auto" for="sponsor_name">Name</label>
                    <div class="col-sm">
                        <input class="form-control" type="text" name="sponsor_name" id="sponsor_name"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-form-label col-sm-auto" for="sponsor_email">Email</label>
                    <div class="col-sm">
                        <input class="form-control" type="email" name="sponsor_email" id="sponsor_email"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-form-label col-sm-auto" for="sponsor_phone">Phone</label>
                    <div class="col-sm">
                        <input class="form-control" type="text" name="sponsor_phone" id="sponsor_phone"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-form-label col-sm-auto" for="sponsor_slogan">Slogan</label>
                    <div class="col-sm">
                        <input class="form-control" type="text" name="sponsor_slogan" id="sponsor_slogan"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-form-label col-sm-auto" for="sponsor_description">Description</label>
                    <div class="col-sm">
                        <textarea class="form-control" name="sponsor_description" id="sponsor_description"/>
                    </div>
                </div>
                <div t-if="request.env.user._is_public()" class="form-check">
                    <input class="form-check-input" type="checkbox" id="contact_details"/>
                    <label class="font-weight-normal" for="contact_details">Use other contact details.</label>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@id='o_wevent_contact_details']" position="attributes">
            <attribute name="t-att-class">'d-none' if booth_category_id.use_sponsor else ''</attribute>
        </xpath>
        <xpath expr="//input[@name='contact_name']" position="attributes">
            <attribute name="t-att-required">False if booth_category_id.use_sponsor else True</attribute>
        </xpath>
        <xpath expr="//input[@name='contact_email']" position="attributes">
            <attribute name="t-att-required">False if booth_category_id.use_sponsor else True</attribute>
        </xpath>
    </template>

</data></odoo>
