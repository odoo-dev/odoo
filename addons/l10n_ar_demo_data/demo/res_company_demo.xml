<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_ar.company_ri" model="res.company">
        <field name="l10n_ar_afip_start_date" eval="time.strftime('%Y-%m')+'-1'"/>

    <record id="base.user_root" model="res.users">
        <field name="company_ids" eval="[(4,ref('l10n_ar.company_ri'))]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="company_ids" eval="[(4,ref('l10n_ar.company_ri'))]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
    </record>

</odoo>
