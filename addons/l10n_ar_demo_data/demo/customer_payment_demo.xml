<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- pago a adhoc con banco y con retenci贸n ganancias -->
    <record model="account.payment.group" id="demo_payment_1">
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="partner_id" ref="l10n_ar_partner.res_partner_adhoc"/>
        <field name="partner_type">customer</field>
    </record>

    <record model="account.payment" id="demo_payment_1_line_1">
        <field name="journal_id" search="[('type', '=', 'bank')]"/>
        <field name="payment_group_id" ref="demo_payment_1"/>
        <field name="partner_type">customer</field>
        <field name="payment_type">inbound</field>
        <field name="partner_id" ref="l10n_ar_partner.res_partner_adhoc"/>
        <field name="amount" eval="500.0"/>
        <field name="payment_method_id" ref="account.account_payment_method_manual_in"/>
    </record>

    <record model="account.payment" id="demo_payment_1_line_2">
        <field name="journal_id" search="[('name', '=', 'Retenciones')]"/>
        <field name="payment_group_id" ref="demo_payment_1"/>
        <field name="partner_type">customer</field>
        <field name="payment_type">inbound</field>
        <field name="partner_id" ref="l10n_ar_partner.res_partner_adhoc"/>
        <field name="amount" eval="50.0"/>
        <field name="tax_withholding_id" search="[('type_tax_use', '=', 'customer'), ('name', '=', 'Retenci贸n Ganancias Sufrida')]"/>
        <field name="withholding_number">123465</field>
        <field name="payment_method_id" ref="account_withholding.account_payment_method_in_withholding"/>
    </record>

    <function model="account.payment.group" name="post">
        <value eval="[ref('demo_payment_1')]"/>
    </function>

