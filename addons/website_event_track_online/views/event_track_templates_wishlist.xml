<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="track_widget_wishlist_star">
    <div class="o_wetrack_js_wishlist ml-2">
        <i t-att-class="'fa fa-star%s %s' % (
            '' if track.is_wishlisted or track.wishlisted_by_default else '-o',
            'o_wishlist_locked' if track.wishlisted_by_default else '')"
           t-att-data-track-id="track.id"
           t-att-data-wishlisted="bool(track.is_wishlisted)"></i>
    </div>
</template>

<template id="track_widget_wishlist_button">
    <button class="btn btn-primary ml-auto">
        <i t-att-class="'fa %s %s' % (
            'fa-check' if on_user_wishlist or wishlisted_by_default else 'fa-plus',
            'o_wishlist_locked' if wishlisted_by_default else '')"/>
        whishlist
    </button>
</template>

</odoo>
