<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="ir_actions_server_view_form"  model="ir.ui.view">
        <field name="name">ir.actions.server.view.form.inherit.sms</field>
        <field name="model">ir.actions.server</field>
        <field name="inherit_id" ref="base.view_server_action_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='link_field_id']" position="after">
                <field name="sms_template_id"
                    context="{'default_model': model_name}"
                    invisible="state != 'sms'"
                    required="state == 'sms'"/>
                <field name="sms_method"
                       groups="base.group_no_one"
                       string="Send as"
                       invisible="state != 'sms'"
                       required="state == 'sms'"/>
                <span colspan="2" class="text-muted o_row ps-1"
                        invisible="state != 'sms'"
                        groups="base.group_no_one">
                    <i class="fa fa-lightbulb-o"/>&amp;nbsp; <field name="sms_method_helper"/>
                </span>
            </xpath>
        </field>
    </record>

</data></odoo>
