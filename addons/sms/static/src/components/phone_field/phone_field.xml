<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.PhoneField" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_phone_link')]" position="after">
            <t t-if="props.value.length > 0">
                <SendSMSButton record="props.record" value="props.value"/>
            </t>
        </xpath>
    </t>

</templates>
