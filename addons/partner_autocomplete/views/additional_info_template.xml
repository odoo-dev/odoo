<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="enrich_service_information">
        <p t-esc="flavor_text" />
        <div class="o_partner_autocomplete_enrich_info" t-attf-class="#{'bg-100' if form_display else 'bg-white'} p-3 mt-3 mb-3 mr-5">
            <div class="col-12 row p-0 m-0">
            <div class="col-10 p-0">
                <h4>
                    <span class="mr-3 align-middle" t-esc="name"/>
                    <a t-if="twitter" class="ml-2" target="_blank" t-attf-href="http://www.twitter.com/{{twitter}}">
                        <img src="/web_editor/font_to_img/61569/rgb(0,132,180)/22"/>
                    </a>
                    <a t-if="facebook" class="ml-2" target="_blank" t-attf-href="http://www.facebook.com/{{facebook}}">
                        <img src="/web_editor/font_to_img/61570/rgb(59,89,152)/22"/>
                    </a>
                    <a t-if="linkedin" class="ml-2" target="_blank" t-attf-href="https://www.linkedin.com/{{linkedin}}">
                        <img src="/web_editor/font_to_img/61580/rgb(0,119,181)/22"/>
                    </a>
                    <a t-if="crunchbase" class="ml-2" target="_blank" t-attf-href="https://www.crunchbase.com/{{crunchbase}}">
                        <img width="19px" height="19px" src="/partner_autocomplete/static/img/crunchbase.ico"/>
                    </a>
                </h4>
                <p t-esc="description"/>
            </div>
            <div class="col-2 p-0 text-right">
                <img t-attf-src="{{logo}}" alt="Company Logo" style="max-width: 80px;"/>
            </div>
            </div>
            <hr/>

            <p t-if="company_type" class="my-1">
                <i class="fa fa-fw mr-2 fa-building text-primary"/>
                <b>Company type:</b>
                <t t-esc="company_type"/>
            </p>
            <p t-if="founded_year" class="my-1">
                <i class="fa fa-fw mr-2 fa-calendar text-primary"/>
                <b>Founded:</b>
                <t t-esc="founded_year"/>
            </p>
            <t t-set="sectors" t-value="[]" />
            <t t-if="sector_primary" t-set="sectors" t-value="sectors + [sector_primary]" />
            <t t-if="industry" t-set="sectors" t-value="sectors + [industry]" />
            <t t-if="industry_group" t-set="sectors" t-value="sectors + [industry_group]" />
            <t t-if="sub_industry" t-set="sectors" t-value="sectors + [sub_industry]" />
            <p t-if="sectors" class="my-1">
                <i class="fa fa-fw mr-2 fa-industry text-primary"/>
                <b>Sector:</b>
                <t t-foreach="sectors" t-as="inner_sector">
                    <label t-esc="inner_sector" style="font-weight:normal; font-size: 0.9rem; padding: 2px 10px; background-color: #eeeeee; margin: 1px 0px; border-radius: 13px;"/>
                </t>
            </p>
            <p t-if="employees" class="my-1">
                <i class="fa fa-fw mr-2 fa-users text-primary"/>
                <b>Employees:</b>
                <t t-esc="employees"/>
            </p>
            <p t-if="estimated_annual_revenue" class="my-1">
                <i class="fa fa-fw mr-2 fa-money text-primary"/>
                <b>Estimated annual revenue:</b>
                <t t-esc="estimated_annual_revenue"/>
            </p>

            <p t-if="phones" class="my-1">
                <i class="fa fa-fw mr-2 fa-phone text-primary"/>
                <b>Phone :</b>
                <t t-foreach="phones" t-as="phone_number">
                    <a t-attf-href="tel:{{phone_number}}" t-esc="phone_number" style="font-weight:normal; font-size: 0.9rem; padding: 2px 10px; background-color: #eeeeee; margin: 1px 0px; border-radius: 13px;"/>
                </t>
            </p>
            <p t-if="emails" class="my-1">
                <i class="fa fa-fw mr-2 fa-envelope text-primary"/>
                <b>Email :</b>
                <t t-foreach="emails" t-as="email">
                    <a target="_top" t-attf-href="mailto:{{email}}" t-esc="email" style="font-weight:normal; font-size: 0.9rem; padding: 2px 10px; background-color: #eeeeee; margin: 1px 0px; border-radius: 13px;"/>
                </t>
            </p>
            <p t-if="timezone" class="my-1">
                <i class="fa fa-fw mr-2 fa-globe text-primary"/>
                <b>Timezone :</b>
                <t t-esc="timezone"/>
                <a target="_blank" t-att-href="timezone_url">(Time Now)</a>
            </p>
            <p t-if="tech" class="my-1">
                <i class="fa fa-fw mr-2 fa-cube text-primary"/>
                <b>Technology Used :</b>
                <t t-foreach="tech" t-as="t">
                    <label t-esc="t" style="font-weight:normal; font-size: 0.9rem; padding: 2px 10px; background-color: #eeeeee; margin: 1px 0px; border-radius: 13px;"/>
                </t>
            </p>
            <p t-if="twitter_bio" class="my-1">
                <i class="fa fa-fw mr-2 fa-twitter text-primary"/>
                <b>
                    Twitter
                    <span t-if="twitter_followers">(<t t-esc="twitter_followers"/> followers)</span> :
                </b>
                <t t-esc="twitter_bio"/>
                <br/>
            </p>
        </div>
    </template>
</odoo>
