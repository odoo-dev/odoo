<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_comparisons" name="Comparisons">
    <div class="s_comparisons pt32 pb32 o_mail_snippet_general">
        <div class="container">
            <div class="row">
                <div class="s_col_no_bgcolor text-center pt32 pb16 col-lg-6">
                    <div class="card bg-200">
                        <h4 class="card-header o_default_snippet_text">DEFAULT</h4>
                        <div class="card-body text-center">
                            <h2 class="card-title oe-hint" placeholder="Heading 2"></h2>
                            <p class="o_mail_display_coupon text-center o_default_snippet_text" style="margin-top:10px;">$8</p>
                            <small class="o_default_snippet_text">user / month (billed annually)</small>

                        </div>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item o_default_snippet_text">Basic features</div>
                            <div class="list-group-item o_default_snippet_text">Basic management</div>
                            <div class="list-group-item o_default_snippet_text">No customization</div>
                            <div class="list-group-item o_default_snippet_text">No support</div>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-block btn-primary o_default_snippet_text">More</a>
                        </div>
                    </div>
                </div>
                <div class="s_col_no_bgcolor text-center pt32 pb16 col-lg-6">
                    <div class="card bg-o-color-5">
                        <h4 class="card-header o_default_snippet_text">PRO</h4>
                        <div class="card-body text-center">
                            <h2 class="card-title oe-hint" placeholder="Heading 2"></h2>
                            <p class="o_mail_display_coupon text-center o_default_snippet_text" style="margin-top:10px;">$18</p>
                            <small class="o_default_snippet_text">user / month (billed annually)</small>

                        </div>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item o_default_snippet_text">
                                <strong class="o_default_snippet_text">Advanced</strong>
                                features
                            </div>
                            <div class="list-group-item o_default_snippet_text">
                                <strong class="o_default_snippet_text">Total</strong>
                                management
                            </div>
                            <div class="list-group-item">
                                <strong class="o_default_snippet_text">Fully customizable</strong>
                            </div>
                            <div class="list-group-item">
                                <strong class="o_default_snippet_text">24/7 Support</strong>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-block btn-primary o_default_snippet_text">More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

</odoo>